<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">



    <!-- CONTENEDOR SCROLL PARA LOS REPORTES -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- PRIMER RECUADRO DE REPORTE -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:orientation="horizontal"
                android:padding="12dp"
                android:background="@drawable/gradient_background"
                android:clipToOutline="true"
                android:outlineProvider="background"
                android:gravity="center_vertical">

                <!-- Imagen del reporte -->
                <ImageView
                    android:id="@+id/imgPoster"
                    android:layout_width="80dp"
                    android:layout_height="110dp"
                    android:layout_marginEnd="12dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/epp"
                    android:contentDescription="Imagen del reporte" />

                <!-- Contenedor de texto y botón -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtNombre"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Juan Pérez"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtFecha"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="01 Sept 2025, 10:45 AM"
                        android:textColor="@color/white"
                        android:textSize="13sp"
                        android:layout_marginBottom="4dp" />

                    <Button
                        android:id="@+id/btnDetalles"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:layout_marginTop="6dp"
                        android:paddingHorizontal="16dp"
                        android:text="Detalles"
                        android:textAllCaps="false"
                        android:backgroundTint="@color/white"
                        android:textColor="@color/black"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- Botón de descarga -->
                <ImageButton
                    android:id="@+id/btnDownload"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:background="@android:color/transparent"
                    android:padding="6dp"
                    android:scaleType="centerInside"
                    android:src="@android:drawable/stat_sys_download_done"
                    android:tint="@color/white"
                    android:contentDescription="Descargar" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
