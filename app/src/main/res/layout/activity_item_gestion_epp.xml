<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8FAFC">

    <!-- CONTENEDOR SCROLL PARA LOS REPORTES -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- PRIMER RECUADRO DE REPORTE MEJORADO -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:strokeColor="#E3F2FD"
                app:strokeWidth="1dp"
                android:layout_marginBottom="12dp"
                android:padding="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical"
                    android:background="@drawable/gradient_background_improved">

                    <!-- Imagen del reporte mejorada -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="80dp"
                        android:layout_height="100dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="2dp"
                        app:cardBackgroundColor="#FFFFFF"
                        android:layout_marginEnd="16dp">

                        <ImageView
                            android:id="@+id/imgPoster"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/epp"
                            android:contentDescription="Imagen del reporte" />

                    </com.google.android.material.card.MaterialCardView>

                    <!-- Contenedor de texto y botón mejorado -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txtNombre"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Juan Pérez"
                            android:textColor="#FFFFFF"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:letterSpacing="0.01"
                            android:shadowColor="#40000000"
                            android:shadowDx="1"
                            android:shadowDy="1"
                            android:shadowRadius="2" />

                        <TextView
                            android:id="@+id/txtFecha"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="01 Sept 2025, 10:45 AM"
                            android:textColor="#E3F2FD"
                            android:textSize="13sp"
                            android:layout_marginBottom="8dp"
                            android:letterSpacing="0.01" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnDetalles"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:paddingHorizontal="20dp"
                            android:text="Ver Detalles"
                            android:textAllCaps="false"
                            android:textSize="13sp"
                            app:cornerRadius="18dp"
                            android:backgroundTint="#FFFFFF"
                            android:textColor="#1976D2"
                            app:icon="@drawable/ic_visibility"
                            app:iconGravity="textStart"
                            app:iconPadding="4dp"
                            app:iconSize="16dp"
                            app:elevation="2dp" />

                    </LinearLayout>

                    <!-- Botón de descarga mejorado -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        app:cardCornerRadius="22dp"
                        app:cardBackgroundColor="#1AFFFFFF"
                        app:cardElevation="2dp"
                        app:strokeColor="#30FFFFFF"
                        app:strokeWidth="1dp"
                        android:layout_marginStart="8dp">

                        <ImageButton
                            android:id="@+id/btnDownload"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:background="@android:color/transparent"
                            android:scaleType="centerInside"
                            android:src="@drawable/ic_download"
                            android:tint="#FFFFFF"
                            android:contentDescription="Descargar" />

                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>

                <!-- Footer del card con estado -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:background="#FAFBFC"
                    android:gravity="center_vertical">

                    <View
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:background="@drawable/circle_online"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Estado: Completado"
                        android:textColor="#64748B"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="EPP"
                        android:textColor="#1976D2"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:background="@drawable/badge_category"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="2dp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>
</LinearLayout>