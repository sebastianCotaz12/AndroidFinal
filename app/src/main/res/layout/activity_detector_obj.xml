<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F8FAFC"
    tools:context=".controller.Detector_obj">

    <!-- HEADER MODERNO -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:cardCornerRadius="0dp"
        app:cardElevation="0dp"
        android:outlineProvider="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/gradient_background"
            android:gravity="center"
            android:paddingTop="50dp">

            <!-- Ícono profesional de cámara -->
            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/ic_camera_pro"
                android:tint="#FFFFFF"
                android:layout_marginBottom="12dp"
                tools:ignore="UseAppTint" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Detector de EPP"
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0.02" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Detectar equipo de protección personal"
                android:textColor="#E3F2FD"
                android:textSize="14sp"
                android:layout_marginTop="4dp" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- CONTENIDO PRINCIPAL -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="20dp"
        android:clipToPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="80dp">

            <!-- TARJETA DE VISTA PREVIA -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp"
                app:strokeColor="#E3F2FD"
                app:strokeWidth="1dp"
                android:backgroundTint="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:letterSpacing="0.05"
                        android:text="VISTA PREVIA"
                        android:textColor="#2196F3"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:backgroundTint="#F5F5F5"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="4dp"
                        app:strokeColor="#BBDEFB"
                        app:strokeWidth="1dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <!-- AQUÍ ESTÁ EL ImageView QUE AHORA ES CLICKEABLE -->
                            <ImageView
                                android:id="@+id/imagePreview"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#f5f5f5"
                                android:contentDescription="Vista previa de imagen"
                                android:scaleType="centerCrop"
                                android:clickable="true"
                                android:focusable="true"
                                android:visibility="gone" />

                            <LinearLayout
                                android:id="@+id/llPlaceholder"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:visibility="visible">

                                <ImageView
                                    android:layout_width="72dp"
                                    android:layout_height="72dp"
                                    android:src="@drawable/ic_photo"
                                    android:tint="#9E9E9E"
                                    tools:ignore="UseAppTint" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:gravity="center"
                                    android:text="Selecciona o toma una foto"
                                    android:textColor="#78909C"
                                    android:textSize="14sp" />

                            </LinearLayout>

                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- TARJETA DE OPCIONES -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp"
                app:strokeColor="#E3F2FD"
                app:strokeWidth="1dp"
                android:backgroundTint="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="OPCIONES"
                        android:textColor="#2196F3"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:letterSpacing="0.05"
                        android:layout_marginBottom="16dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp">

                        <!-- Botón Cámara -->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnTakePhoto"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:text="Cámara"
                            android:textColor="#2196F3"
                            android:textSize="14sp"
                            android:drawableStart="@drawable/ic_camera_alt"
                            android:drawablePadding="12dp"
                            android:layout_marginEnd="8dp"
                            app:iconGravity="textStart"
                            app:cornerRadius="24dp"
                            app:strokeColor="#2196F3"
                            app:strokeWidth="1dp" />

                        <!-- Botón Galería -->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnSelectImage"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:text="Galería"
                            android:textColor="#2196F3"
                            android:textSize="14sp"
                            android:drawableStart="@drawable/ic_photo_library"
                            android:drawablePadding="12dp"
                            android:layout_marginStart="8dp"
                            app:cornerRadius="24dp"
                            app:strokeColor="#2196F3"
                            app:strokeWidth="1dp" />
                    </LinearLayout>

                    <!-- Selector de Contexto -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/contextLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                        android:hint="Contexto de trabajo"
                        android:layout_marginBottom="8dp">

                        <AutoCompleteTextView
                            android:id="@+id/contextDropdown"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none"
                            android:editable="true" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Selecciona el contexto de trabajo (soldador, médico, etc.)"
                        android:textColor="#78909C"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:layout_marginBottom="16dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnDetect"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="Detectar EPP"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:drawableStart="@drawable/ic_search"
                        android:drawablePadding="12dp"
                        android:backgroundTint="#2196F3"
                        app:cornerRadius="24dp"
                        style="@style/Widget.Material3.Button" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- TARJETA DE RESULTADOS -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardResults"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp"
                app:strokeColor="#E3F2FD"
                app:strokeWidth="1dp"
                android:backgroundTint="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="RESULTADOS"
                        android:textColor="#2196F3"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:letterSpacing="0.05"
                        android:layout_marginBottom="16dp" />

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="4dp"
                        app:strokeColor="#BBDEFB"
                        app:strokeWidth="1dp"
                        android:backgroundTint="#F8F9FA">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="20dp">

                            <TextView
                                android:id="@+id/resultText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Selecciona o toma una foto para detectar EPP"
                                android:textSize="16sp"
                                android:gravity="center"
                                android:textColor="#78909C"
                                android:textStyle="italic"
                                android:lineSpacingExtra="4dp" />

                            <LinearLayout
                                android:id="@+id/llMissingItems"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginTop="12dp"
                                android:visibility="gone">

                                <!-- Los elementos faltantes se agregarán aquí dinámicamente -->

                            </LinearLayout>

                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>

    <!-- BARRA INFERIOR -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="72dp"
        app:cardCornerRadius="0dp"
        app:cardElevation="12dp"
        app:strokeColor="#E0E0E0"
        app:strokeWidth="0.5dp"
        android:backgroundTint="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingHorizontal="24dp"
            android:gravity="center_vertical">

            <!-- Botón Volver -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCancelar"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Volver"
                android:textColor="#2196F3"
                android:textSize="14sp"
                android:drawableStart="@drawable/ic_arrow_back"
                android:drawablePadding="12dp"
                app:cornerRadius="24dp"
                app:strokeColor="#2196F3"
                app:strokeWidth="1dp"
                android:backgroundTint="@android:color/transparent"
                style="@style/Widget.Material3.Button.OutlinedButton" />

            <Space
                android:layout_width="12dp"
                android:layout_height="1dp" />

            <!-- Botón Limpiar -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnLimpiar"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Limpiar"
                android:textColor="#2196F3"
                android:textSize="14sp"
                android:drawableStart="@drawable/ic_delete"
                android:drawablePadding="12dp"
                app:cornerRadius="24dp"
                app:strokeColor="#2196F3"
                app:strokeWidth="1dp"
                android:backgroundTint="@android:color/transparent"
                style="@style/Widget.Material3.Button.OutlinedButton" />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</LinearLayout>