<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F8FAFC"
    tools:context=".controller.Detector_obj">

    <!-- HEADER MODERNO -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:cardCornerRadius="0dp"
        app:cardElevation="0dp"
        android:outlineProvider="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/gradient_background"
            android:gravity="center"
            android:paddingTop="50dp">

            <!-- Ãcono de cÃ¡mara usando texto emoji -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“·"
                android:textSize="48sp"
                android:layout_marginBottom="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Detector de EPP"
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0.02" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Detectar equipo de protecciÃ³n personal"
                android:textColor="#E3F2FD"
                android:textSize="14sp"
                android:layout_marginTop="4dp" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- CONTENIDO PRINCIPAL -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="20dp"
        android:clipToPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="80dp">

            <!-- TARJETA DE VISTA PREVIA -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp"
                app:strokeColor="#E3F2FD"
                app:strokeWidth="1dp"
                android:backgroundTint="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:letterSpacing="0.05"
                        android:text="VISTA PREVIA"
                        android:textColor="#2196F3"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <!-- Vista previa de imagen -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:backgroundTint="#F5F5F5"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="4dp"
                        app:strokeColor="#BBDEFB"
                        app:strokeWidth="1dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/imagePreview"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#f5f5f5"
                                android:contentDescription="Vista previa de imagen"
                                android:scaleType="centerCrop"
                                android:visibility="gone" />

                            <LinearLayout
                                android:id="@+id/llPlaceholder"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:visibility="visible">

                                <!-- Ãcono de cÃ¡mara con emoji -->
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:contentDescription="Seleccionar imagen"
                                    android:text=""
                                    android:textSize="64sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:gravity="center"
                                    android:text="Selecciona o toma una foto"
                                    android:textColor="#78909C"
                                    android:textSize="14sp" />

                            </LinearLayout>

                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- TARJETA DE OPCIONES -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp"
                app:strokeColor="#E3F2FD"
                app:strokeWidth="1dp"
                android:backgroundTint="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="OPCIONES"
                        android:textColor="#2196F3"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:letterSpacing="0.05"
                        android:layout_marginBottom="16dp" />

                    <!-- Botones de selecciÃ³n -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnTakePhoto"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:backgroundTint="@android:color/transparent"
                            android:text="ðŸ“· CÃ¡mara"
                            android:textColor="#2196F3"
                            android:textSize="14sp"
                            app:cornerRadius="24dp"
                            app:strokeColor="#2196F3"
                            app:strokeWidth="1dp"
                            android:layout_marginEnd="8dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnSelectImage"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:text="ðŸ“ GalerÃ­a"
                            android:textColor="#2196F3"
                            android:textSize="14sp"
                            app:cornerRadius="24dp"
                            app:strokeColor="#2196F3"
                            app:strokeWidth="1dp"
                            android:backgroundTint="@android:color/transparent"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            android:layout_marginStart="8dp" />

                    </LinearLayout>

                    <!-- InformaciÃ³n sobre elementos detectados -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Elementos detectados: bata y estetoscopio"
                        android:textColor="#78909C"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:layout_marginTop="8dp" />

                    <!-- BotÃ³n de detecciÃ³n -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnDetect"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="16dp"
                        android:text="ðŸ” Detectar EPP"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        app:cornerRadius="24dp"
                        android:backgroundTint="#2196F3"
                        style="@style/Widget.Material3.Button" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- TARJETA DE RESULTADOS -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp"
                app:strokeColor="#E3F2FD"
                app:strokeWidth="1dp"
                android:backgroundTint="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="RESULTADOS"
                        android:textColor="#2196F3"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:letterSpacing="0.05"
                        android:layout_marginBottom="16dp" />

                    <!-- Ãrea de resultados -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="4dp"
                        app:strokeColor="#BBDEFB"
                        app:strokeWidth="1dp"
                        android:backgroundTint="#F8F9FA">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="20dp">

                            <TextView
                                android:id="@+id/resultText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Selecciona o toma una foto para detectar EPP"
                                android:textSize="16sp"
                                android:gravity="center"
                                android:textColor="#78909C"
                                android:textStyle="italic"
                                android:lineSpacingExtra="4dp" />

                            <!-- Lista de elementos faltantes -->
                            <LinearLayout
                                android:id="@+id/llMissingItems"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginTop="12dp"
                                android:visibility="gone">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Elementos faltantes:"
                                    android:textColor="#F44336"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:layout_marginBottom="8dp" />

                                <TextView
                                    android:id="@+id/tvMissingItems"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:textColor="#78909C"
                                    android:textSize="14sp"
                                    android:lineSpacingExtra="4dp" />

                            </LinearLayout>

                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>

    <!-- BARRA INFERIOR DE ACCIONES -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="72dp"
        app:cardCornerRadius="0dp"
        app:cardElevation="12dp"
        app:strokeColor="#E0E0E0"
        app:strokeWidth="0.5dp"
        android:backgroundTint="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingHorizontal="24dp"
            android:gravity="center_vertical">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCancelar"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="â¬…ï¸ Volver"
                android:textColor="#2196F3"
                android:textSize="14sp"
                app:cornerRadius="24dp"
                app:strokeColor="#2196F3"
                app:strokeWidth="1dp"
                android:backgroundTint="@android:color/transparent"
                style="@style/Widget.Material3.Button.OutlinedButton" />

            <Space
                android:layout_width="12dp"
                android:layout_height="1dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnLimpiar"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="ðŸ—‘ï¸ Limpiar"
                android:textColor="#2196F3"
                android:textSize="14sp"
                app:cornerRadius="24dp"
                app:strokeColor="#2196F3"
                app:strokeWidth="1dp"
                android:backgroundTint="@android:color/transparent"
                style="@style/Widget.Material3.Button.OutlinedButton" />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</LinearLayout>