<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F8FAFC"
    tools:context=".controller.Lista_actLudicas">

    <!-- Encabezado mejorado -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="64dp"
        app:cardBackgroundColor="#1976D2"
        app:cardCornerRadius="0dp"
        app:cardElevation="8dp"
        app:strokeColor="#1565C0"
        app:strokeWidth="1dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="20dp"
            android:paddingEnd="20dp">

            <ImageView
                android:id="@+id/imgButton_VolverInicio"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_arrow_back"
                android:tint="#FFFFFF"
                tools:ignore="UseAppTint" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Actividades Lúdicas"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:letterSpacing="0.02" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/logo"
                android:background="@drawable/circle_background"
                android:padding="4dp" />

        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Contenido principal -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Título mejorado -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gestión de Actividades Lúdicas"
                android:textAlignment="center"
                android:textColor="#1A237E"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"
                android:letterSpacing="0.03" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Actividades recreativas recibidas y gestionadas"
                android:textAlignment="center"
                android:textColor="#455A64"
                android:textSize="14sp"
                android:layout_marginBottom="24dp" />

            <!-- Barra de búsqueda mejorada CON FILTRO DE FECHA -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#FFFFFF"
                app:strokeColor="#E3F2FD"
                app:strokeWidth="1dp"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Fila 1: Búsqueda por texto -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_search"
                            android:tint="#64748B"
                            android:layout_marginEnd="12dp"
                            tools:ignore="UseAppTint" />

                        <EditText
                            android:id="@+id/etBuscar"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            android:hint="Buscar actividad por nombre, descripción o usuario..."
                            android:padding="8dp"
                            android:textColor="#1A237E"
                            android:textColorHint="#94A3B8"
                            android:textSize="15sp" />

                    </LinearLayout>

                    <!-- Línea separadora -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#E2E8F0"
                        android:layout_marginBottom="12dp" />

                    <!-- Fila 2: Filtro por fecha -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_date"
                            android:tint="#64748B"
                            android:layout_marginEnd="12dp"
                            tools:ignore="UseAppTint" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Busqueda por fecha"
                                android:textColor="#78909C"
                                android:textSize="10sp"
                                android:textStyle="bold"
                                android:letterSpacing="0.05" />

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:boxBackgroundMode="outline"
                                app:boxBackgroundColor="@android:color/transparent"
                                app:boxCornerRadiusBottomEnd="12dp"
                                app:boxCornerRadiusBottomStart="12dp"
                                app:boxCornerRadiusTopEnd="12dp"
                                app:boxCornerRadiusTopStart="12dp"
                                app:boxStrokeColor="#E3F2FD"
                                android:layout_marginTop="4dp">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/etFiltrarFecha"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="Seleccione fecha de la evidencia"
                                    android:textSize="14sp"
                                    android:textColor="#263238"
                                    android:focusable="false"
                                    android:clickable="true" />
                            </com.google.android.material.textfield.TextInputLayout>
                        </LinearLayout>

                        <ImageButton
                            android:id="@+id/btnLimpiarFiltro"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_clear"
                            android:tint="#94A3B8"
                            android:background="?android:attr/selectableItemBackgroundBorderless"
                            android:visibility="gone"
                            android:layout_marginStart="8dp"
                            tools:ignore="UseAppTint" />

                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Botón crear nueva actividad lúdica mejorado -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_actividad_ludica"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="#E3F2FD"
                app:strokeColor="#BBDEFB"
                app:strokeWidth="2dp"
                android:layout_marginBottom="28dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingVertical="20dp"
                    android:paddingHorizontal="24dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Crear Nueva Actividad"
                            android:textColor="#1A237E"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Organiza actividades recreativas y lúdicas"
                            android:textColor="#455A64"
                            android:textSize="13sp" />

                    </LinearLayout>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        app:cardCornerRadius="24dp"
                        app:cardBackgroundColor="#1976D2"
                        app:cardElevation="4dp">

                        <ImageButton
                            android:id="@+id/imgButton_crearlista"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:background="@android:color/transparent"
                            android:src="@drawable/ic_add"
                            android:tint="#FFFFFF"
                            tools:ignore="UseAppTint" />

                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Contenedor de actividades lúdicas con recuadro -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="#FFFFFF"
                app:strokeColor="#E3F2FD"
                app:strokeWidth="1.5dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Header de la sección dentro del recuadro -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="20dp"
                        android:gravity="center_vertical"
                        android:background="@drawable/section_header_bordered">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_celebration"
                            android:tint="#1A237E"
                            android:layout_marginEnd="12dp"
                            tools:ignore="UseAppTint" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Actividades Lúdicas Recientes"
                            android:textColor="#1A237E"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:letterSpacing="0.01" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ver todos"
                            android:textColor="#1976D2"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <!-- Línea separadora -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#F1F5F9"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp" />

                    <!-- Lista de actividades ENCERRADA en el recuadro -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerViewListaChequeo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollbars="vertical"
                        android:padding="16dp"
                        android:clipToPadding="false"
                        android:minHeight="200dp"
                        android:background="@drawable/recycler_background" />

                    <!-- Footer del recuadro ACTUALIZADO CON ID -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:gravity="center"
                        android:background="#FAFBFC">

                        <TextView
                            android:id="@+id/tvTotalActividades"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total de actividades: 0"
                            android:textColor="#64748B"
                            android:textSize="12sp" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="12dp"
                            android:background="#E2E8F0"
                            android:layout_marginStart="12dp"
                            android:layout_marginEnd="12dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Actualizado hoy"
                            android:textColor="#64748B"
                            android:textSize="12sp" />

                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Elemento decorativo inferior -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sistema Integral de Seguridad Laboral"
                android:textAlignment="center"
                android:textColor="#94A3B8"
                android:textSize="12sp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="16dp" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>