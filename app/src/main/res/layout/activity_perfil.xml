<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    android:padding="24dp"
    tools:context=".Perfil">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Imagen de perfil -->
        <ImageView
            android:id="@+id/ivPerfil"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="32dp"
            android:src="@drawable/ic_person"
            android:contentDescription="Foto de perfil"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/circle_background"
            android:padding="8dp"
            android:scaleType="centerCrop" />

        <!-- Tarjeta de datos -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardDatos"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginHorizontal="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            android:backgroundTint="#E7F0FD"
            app:layout_constraintTop_toBottomOf="@id/ivPerfil"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Nombre -->
                <EditText
                    android:id="@+id/etNombre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nombre completo"
                    android:inputType="textPersonName"
                    android:drawableStart="@drawable/ic_person"
                    android:drawablePadding="10dp"
                    android:backgroundTint="@color/black" />

                <!-- Cargo -->
                <EditText
                    android:id="@+id/etCargo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Cargo"
                    android:inputType="text"
                    android:drawableStart="@drawable/ic_work"
                    android:drawablePadding="10dp"
                    android:layout_marginTop="16dp" />

                <!-- Correo -->
                <EditText
                    android:id="@+id/etCorreo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Correo electr贸nico"
                    android:inputType="textEmailAddress"
                    android:drawableStart="@drawable/ic_email"
                    android:drawablePadding="10dp"
                    android:backgroundTint="@color/black"
                    android:layout_marginTop="16dp" />

                <!-- Confirmar Contrase帽a -->
                <EditText
                    android:id="@+id/etConfirmarPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Confirmar contrase帽a"
                    android:inputType="textPassword"
                    android:drawableStart="@drawable/ic_lock"
                    android:drawablePadding="10dp"
                    android:layout_marginTop="16dp" />

                <!-- rea -->
                <EditText
                    android:id="@+id/etArea"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="rea"
                    android:inputType="text"
                    android:drawablePadding="10dp"
                    android:layout_marginTop="16dp" />

                <!-- Empresa -->
                <EditText
                    android:id="@+id/etEmpresa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Empresa"
                    android:inputType="text"
                    android:drawableStart="@drawable/ic_business"
                    android:drawablePadding="10dp"
                    android:layout_marginTop="16dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Bot贸n Cerrar Sesi贸n -->
        <Button
            android:id="@+id/btnCerrarSesion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Cerrar Sesi贸n "
            android:textColor="@android:color/white"
            android:backgroundTint="#B71C1C"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@id/cardDatos"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
