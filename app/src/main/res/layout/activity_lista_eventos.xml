<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F8FAFC"
    tools:context=".controller.Lista_eventos">

    <!-- ENCABEZADO IGUAL AL FUNCIONAL -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="64dp"
        app:cardBackgroundColor="#1976D2"
        app:cardCornerRadius="0dp"
        app:cardElevation="8dp"
        app:strokeColor="#1565C0"
        app:strokeWidth="1dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="20dp"
            android:paddingEnd="20dp">

            <ImageView
                android:id="@+id/imgButton_VolverInicio"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_arrow_back"
                android:tint="#FFFFFF" />

            <TextView
                android:id="@+id/titulo_eventos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Eventos"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/logo"
                android:background="@drawable/circle_background"
                android:padding="4dp" />
        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- CONTENIDO -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- TÍTULOS -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gestión de Eventos"
                android:textAlignment="center"
                android:textColor="#1A237E"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Eventos recibidos y gestionados"
                android:textAlignment="center"
                android:textColor="#455A64"
                android:textSize="14sp"
                android:layout_marginBottom="24dp" />

            <!-- BUSCADOR + FILTRO -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#FFFFFF"
                app:strokeColor="#E3F2FD"
                app:strokeWidth="1dp"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!-- FILA 1 -->
                    <LinearLayout
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_search"
                            android:tint="#64748B"
                            android:layout_marginEnd="12dp" />

                        <EditText
                            android:id="@+id/etBuscarEvento"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="Buscar evento por nombre, fecha o estado..."
                            android:padding="8dp"
                            android:background="@android:color/transparent"
                            android:textColor="#1A237E"
                            android:textColorHint="#94A3B8"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#E2E8F0"
                        android:layout_marginBottom="12dp" />

                    <!-- FILA 2: FECHA -->
                    <LinearLayout
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_date"
                            android:tint="#64748B"
                            android:layout_marginEnd="12dp" />

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <TextView
                                android:text="Filtrar por fecha"
                                android:textColor="#78909C"
                                android:textSize="10sp"
                                android:textStyle="bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:boxBackgroundMode="outline"
                                app:boxStrokeColor="#E3F2FD">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/etFiltrarFechaEvento"
                                    android:hint="Seleccione fecha del evento"
                                    android:textColor="#263238"
                                    android:textSize="14sp"
                                    android:focusable="false"
                                    android:clickable="true"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" />
                            </com.google.android.material.textfield.TextInputLayout>
                        </LinearLayout>

                        <ImageButton
                            android:id="@+id/btnLimpiarFiltroEvento"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_clear"
                            android:tint="#94A3B8"
                            android:visibility="gone"
                            android:background="?android:attr/selectableItemBackgroundBorderless" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- BOTÓN CREAR -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_evento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="#E3F2FD"
                app:strokeColor="#BBDEFB"
                app:strokeWidth="2dp"
                android:layout_marginBottom="28dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground">

                <LinearLayout
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingVertical="20dp"
                    android:paddingHorizontal="24dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:text="Crear Nuevo Evento"
                            android:textColor="#1A237E"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:text="Organiza y registra eventos"
                            android:textColor="#455A64"
                            android:textSize="13sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        app:cardCornerRadius="24dp"
                        app:cardBackgroundColor="#1976D2">

                        <ImageButton
                            android:id="@+id/imgButtonCrearEvento"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_add"
                            android:background="@android:color/transparent"
                            android:tint="#FFFFFF" />
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- ***AQUÍ ESTABA EL ERROR: FALTABA EL RECYCLERVIEW*** -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="#FFFFFF"
                app:strokeColor="#E3F2FD"
                app:strokeWidth="1.5dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!-- HEADER DENTRO DEL CUADRO -->
                    <LinearLayout
                        android:orientation="horizontal"
                        android:padding="20dp"
                        android:gravity="center_vertical"
                        android:background="@drawable/section_header_bordered"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_event"
                            android:tint="#1A237E"
                            android:layout_marginEnd="12dp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Eventos Recientes"
                            android:textColor="#1A237E"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ver todos"
                            android:textColor="#1976D2"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#F1F5F9"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp" />

                    <!-- **RECYCLERVIEW QUE FALTABA** -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerViewEventos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:clipToPadding="false"
                        android:minHeight="200dp" />

                    <!-- FOOTER -->
                    <LinearLayout
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:padding="16dp"
                        android:background="#FAFBFC"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tvTotalEventos"
                            android:text="Total de eventos: 0"
                            android:textColor="#64748B"
                            android:textSize="12sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="12dp"
                            android:background="#E2E8F0"
                            android:layout_marginHorizontal="12dp" />

                        <TextView
                            android:text="Actualizado hoy"
                            android:textColor="#64748B"
                            android:textSize="12sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
