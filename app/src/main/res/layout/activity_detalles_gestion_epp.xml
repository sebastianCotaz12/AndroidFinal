<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F8FC">

    <!-- ENCABEZADO CON DEGRADADO AZUL -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/gradient_background"
        android:elevation="6dp"
        android:paddingTop="32dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Detalle Gestión EPP"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium" />
    </LinearLayout>

    <!-- CONTENIDO SCROLLABLE -->
    <ScrollView
        android:layout_below="@id/header"
        android:layout_above="@+id/fab"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="80dp">

            <!-- Id Usuario -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="14dp"
                app:cardUseCompatPadding="true"
                android:layout_marginBottom="14dp"
                android:backgroundTint="#FFFFFF"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="18dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Id Usuario"
                        android:textStyle="bold"
                        android:textSize="17sp"
                        android:textColor="#0D47A1" />

                    <TextView
                        android:id="@+id/tvIdG"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#455A64"
                        android:textSize="15sp"
                        android:layout_marginTop="6dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Nombre -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="14dp"
                app:cardUseCompatPadding="true"
                android:layout_marginBottom="14dp"
                android:backgroundTint="#FFFFFF"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="18dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nombre"
                        android:textStyle="bold"
                        android:textSize="17sp"
                        android:textColor="#0D47A1" />

                    <TextView
                        android:id="@+id/tvNombre"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#455A64"
                        android:textSize="15sp"
                        android:layout_marginTop="6dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Cédula -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="14dp"
                app:cardUseCompatPadding="true"
                android:layout_marginBottom="14dp"
                android:backgroundTint="#FFFFFF"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="18dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Cédula"
                        android:textStyle="bold"
                        android:textSize="17sp"
                        android:textColor="#0D47A1" />

                    <TextView
                        android:id="@+id/tvCedula"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#455A64"
                        android:textSize="15sp"
                        android:layout_marginTop="6dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Cargo -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="14dp"
                app:cardUseCompatPadding="true"
                android:layout_marginBottom="14dp"
                android:backgroundTint="#FFFFFF"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="18dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Cargo"
                        android:textStyle="bold"
                        android:textSize="17sp"
                        android:textColor="#0D47A1" />

                    <TextView
                        android:id="@+id/tvCargo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#455A64"
                        android:textSize="15sp"
                        android:layout_marginTop="6dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Productos -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="14dp"
                app:cardUseCompatPadding="true"
                android:layout_marginBottom="14dp"
                android:backgroundTint="#FFFFFF"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="18dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Productos"
                        android:textStyle="bold"
                        android:textSize="17sp"
                        android:textColor="#0D47A1" />

                    <TextView
                        android:id="@+id/tvProductos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#455A64"
                        android:textSize="15sp"
                        android:layout_marginTop="6dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Cantidad -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="14dp"
                app:cardUseCompatPadding="true"
                android:layout_marginBottom="14dp"
                android:backgroundTint="#FFFFFF"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="18dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Cantidad"
                        android:textStyle="bold"
                        android:textSize="17sp"
                        android:textColor="#0D47A1" />

                    <TextView
                        android:id="@+id/tvCantidad"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#455A64"
                        android:textSize="15sp"
                        android:layout_marginTop="6dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Importancia -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="14dp"
                app:cardUseCompatPadding="true"
                android:layout_marginBottom="14dp"
                android:backgroundTint="#FFFFFF"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="18dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Importancia"
                        android:textStyle="bold"
                        android:textSize="17sp"
                        android:textColor="#0D47A1" />

                    <TextView
                        android:id="@+id/tvImportancia"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#455A64"
                        android:textSize="15sp"
                        android:layout_marginTop="6dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Estado -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="14dp"
                app:cardUseCompatPadding="true"
                android:layout_marginBottom="14dp"
                android:backgroundTint="#FFFFFF"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="18dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Estado"
                        android:textStyle="bold"
                        android:textSize="17sp"
                        android:textColor="#0D47A1" />

                    <TextView
                        android:id="@+id/tvEstado"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#455A64"
                        android:textSize="15sp"
                        android:layout_marginTop="6dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Fecha Creación -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="14dp"
                app:cardUseCompatPadding="true"
                android:layout_marginBottom="60dp"
                android:backgroundTint="#FFFFFF"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="18dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Fecha de Creación"
                        android:textStyle="bold"
                        android:textSize="17sp"
                        android:textColor="#0D47A1" />

                    <TextView
                        android:id="@+id/tvFechaCreacion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#455A64"
                        android:textSize="15sp"
                        android:layout_marginTop="6dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

    <!-- BOTÓN FLOTANTE -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="24dp"
        app:backgroundTint="#2196F3"
        app:tint="@android:color/white"
        app:srcCompat="@android:drawable/ic_menu_edit"
        android:elevation="10dp" />
</RelativeLayout>
