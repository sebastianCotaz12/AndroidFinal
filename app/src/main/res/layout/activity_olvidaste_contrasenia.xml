<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/img"
    android:padding="24dp"
    tools:context=".controller.Olvidaste_contrasenia">

    <!-- Fondo semitransparente -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000" />

    <!-- Contenido -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:padding="20dp">

        <!-- Icono / Imagen -->
        <ImageView
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:src="@mipmap/logo"
            android:layout_marginBottom="30dp"/>

        <!-- Texto -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ingrese su correo"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

        <!-- Campo correo -->
        <EditText
            android:id="@+id/edtCorreoRe"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Correo"
            android:inputType="textEmailAddress"
            android:background="@android:drawable/edit_text"
            android:padding="10dp"
            android:textColor="@android:color/black"
            android:textColorHint="#BDBDBD"
            android:layout_marginBottom="20dp"
            android:autofillHints="emailAddress" />

        <!-- Imagen/Texto captcha -->
        <TextView
            android:id="@+id/txtCodigo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CODIGO"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_marginBottom="10dp"/>

        <!-- Campo para escribir captcha -->
        <EditText
            android:id="@+id/edtCaptcha"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Escriba el código"
            android:background="@android:drawable/edit_text"
            android:padding="10dp"
            android:textColor="@android:color/black"
            android:textColorHint="#BDBDBD"
            android:layout_marginBottom="20dp"/>

        <!-- Botón recuperar -->
        <Button
            android:id="@+id/btnOlvido"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="Enviar correo"
            android:backgroundTint="#3F7DFA"
            android:textColor="@android:color/white"
            android:textAllCaps="false"
            android:layout_marginBottom="10dp" />

        <!-- Botón volver al login -->
        <Button
            android:id="@+id/btnVolverLogin"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="Volver al login"
            android:backgroundTint="#9E9E9E"
            android:textColor="@android:color/white"
            android:textAllCaps="false" />

    </LinearLayout>
</RelativeLayout>
