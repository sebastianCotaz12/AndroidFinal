<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9FAFB"
    tools:context=".controller.Olvidaste_contrasenia">

    <!-- Header con gradiente -->
    <View
        android:layout_width="match_parent"
        android:layout_height="380dp"
        android:background="@drawable/header_gradient_dark"
        android:elevation="3dp" />

    <!-- Card principal -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        android:layout_marginTop="260dp"
        app:cardCornerRadius="32dp"
        app:cardElevation="10dp"
        app:cardBackgroundColor="@android:color/white"
        app:strokeColor="#E3F2FD"
        app:strokeWidth="1dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="never"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="32dp"
                android:gravity="center">

                <!-- Logo en círculo -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginBottom="20dp"
                    app:cardCornerRadius="50dp"
                    app:cardBackgroundColor="#E3F2FD"
                    app:cardElevation="8dp">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:src="@mipmap/logo"
                        android:tint="#1976D2" />
                </com.google.android.material.card.MaterialCardView>

                <!-- Títulos -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Recuperar"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#1A237E"
                    android:gravity="center"
                    android:layout_marginBottom="2dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contraseña"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#1A237E"
                    android:gravity="center"
                    android:layout_marginBottom="16dp" />

                <!-- Descripción -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ingresa tu correo electrónico para recibir instrucciones de recuperación."
                    android:textSize="15sp"
                    android:textColor="#455A64"
                    android:gravity="center"
                    android:lineSpacingExtra="6dp"
                    android:layout_marginBottom="28dp" />

                <!-- Línea decorativa -->
                <View
                    android:layout_width="120dp"
                    android:layout_height="3dp"
                    android:background="#BBDEFB"
                    android:layout_marginBottom="28dp"
                    android:alpha="0.5" />

                <!-- Campo Correo Electrónico -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/input_field_simple"
                    android:gravity="center_vertical"
                    android:padding="8dp"
                    android:layout_marginBottom="24dp"
                    >

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_email"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="12dp"
                        android:tint="#1976D2" />

                    <EditText
                        android:id="@+id/edtCorreoRe"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:minHeight="48dp"
                        android:hint="Correo electrónico"
                        android:inputType="textEmailAddress"
                        android:textSize="16sp"
                        android:textColor="#1A237E"
                        android:textColorHint="#64748B"
                        android:background="@android:color/transparent"
                        android:padding="12dp"
                        android:paddingStart="8dp"
                        android:paddingEnd="16dp"
                        android:autofillHints="emailAddress" />
                </LinearLayout>

                <!-- Sección Captcha -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="24dp"/>

                <!-- Campo Código de Verificación -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/input_field_simple"
                    android:gravity="center_vertical"
                    android:padding="8dp"
                    android:layout_marginBottom="32dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_verified"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="12dp"
                        android:tint="#1976D2" />

                    <EditText
                        android:id="@+id/edtCaptcha"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:minHeight="48dp"
                        android:hint="Código de verificación"
                        android:textSize="16sp"
                        android:textColor="#1A237E"
                        android:textColorHint="#64748B"
                        android:background="@android:color/transparent"
                        android:padding="12dp"
                        android:paddingStart="8dp"
                        android:paddingEnd="16dp" />
                </LinearLayout>

                <!-- Botón Enviar Correo -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnOlvido"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Enviar Correo de Recuperación"
                    android:textSize="16sp"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    app:cornerRadius="16dp"
                    android:backgroundTint="#1976D2"
                    android:layout_marginBottom="16dp"
                    app:elevation="6dp" />

                <!-- Botón Volver -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnVolverLogin"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:text="Volver al Login"
                    android:textSize="15sp"
                    android:textColor="#64748B"
                    app:cornerRadius="14dp"
                    android:backgroundTint="#F1F5F9"
                    app:strokeColor="#E2E8F0"
                    app:strokeWidth="1dp"
                    app:elevation="2dp" />

                <!-- Texto final -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Te enviaremos un enlace seguro para recuperar tu acceso"
                    android:textSize="12sp"
                    android:textColor="#78909C"
                    android:gravity="center"
                    android:layout_marginTop="12dp" />

            </LinearLayout>
        </ScrollView>
    </com.google.android.material.card.MaterialCardView>

</RelativeLayout>