<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#E3F2FD"
    tools:context=".controller.Form_actLudicas">

    <!-- Barra superior -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="12dp"
        android:background="#1565C0"
        android:elevation="6dp">

        <ImageView
            android:id="@+id/ivLogo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="Icono Actividades"
            android:src="@drawable/ic_form"
            android:tint="@color/white" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Actividades Lúdicas"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@android:color/white" />

        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:src="@drawable/logo"
            android:contentDescription="Logo" />
    </LinearLayout>

    <!-- Título -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Formulario Actividad Lúdica"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#0D47A1"
        android:gravity="center"
        android:layout_marginVertical="16dp" />

    <!-- Contenedor scrollable -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingHorizontal="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Nombre -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="14dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/bg_card_blue">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nombre Usuario"
                    android:textColor="#0D47A1"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:layout_marginBottom="6dp" />

                <EditText
                    android:id="@+id/etNombreUsuario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nombre usuario"
                    android:background="@drawable/bg_edittext_blue"
                    android:padding="10dp"
                    android:inputType="text"
                    android:enabled="false" />
            </LinearLayout>

            <!-- Cargo -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="14dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/bg_card_blue">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cargo"
                    android:textColor="#0D47A1"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:layout_marginBottom="6dp" />

                <EditText
                    android:id="@+id/etCargoUsuario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Cargo"
                    android:background="@drawable/bg_edittext_blue"
                    android:padding="10dp"
                    android:inputType="text"
                    android:enabled="false" />
            </LinearLayout>

            <!-- Nombre Actividad -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="14dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/bg_card_blue">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nombre de la Actividad"
                    android:textColor="#0D47A1"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:layout_marginBottom="6dp" />

                <EditText
                    android:id="@+id/etNombreActividad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Ingrese nombre de la actividad"
                    android:background="@drawable/bg_edittext_blue"
                    android:padding="10dp"
                    android:inputType="text" />
            </LinearLayout>

            <!-- Fecha -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="14dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/bg_card_blue">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Fecha"
                    android:textColor="#0D47A1"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:layout_marginBottom="6dp" />

                <EditText
                    android:id="@+id/etFecha"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Seleccione fecha"
                    android:focusable="false"
                    android:clickable="true"
                    android:background="@drawable/bg_edittext_blue"
                    android:padding="10dp"
                    android:inputType="date" />
            </LinearLayout>

            <!-- Descripción -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="14dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/bg_card_blue">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Descripción"
                    android:textColor="#0D47A1"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:layout_marginBottom="6dp" />

                <EditText
                    android:id="@+id/etDescripcion"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:hint="Ingrese descripción"
                    android:gravity="top|start"
                    android:background="@drawable/bg_edittext_blue"
                    android:padding="10dp"
                    android:inputType="textMultiLine" />
            </LinearLayout>

            <!-- Imagen -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="14dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/bg_card_blue">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Adjuntar Imagen"
                    android:textColor="#0D47A1"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:layout_marginBottom="6dp" />

                <ImageView
                    android:id="@+id/ivAdjuntar"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:src="@drawable/img"
                    android:contentDescription="Seleccionar imagen"
                    android:padding="8dp" />

                <TextView
                    android:id="@+id/tvImagenSeleccionada"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ninguna imagen seleccionada"
                    android:textColor="#808080"
                    android:paddingTop="4dp" />

                <ImageView
                    android:id="@+id/ivPreview"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:scaleType="centerCrop"
                    android:visibility="gone"
                    android:layout_marginTop="8dp"
                    android:background="#E0E0E0" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Botón Enviar -->
    <Button
        android:id="@+id/btnEnviarEvidencia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enviar Actividad"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:backgroundTint="#0D47A1"
        android:textColor="@android:color/white"
        android:elevation="8dp"
        android:layout_margin="16dp"
        android:paddingVertical="14dp" />

</LinearLayout>
