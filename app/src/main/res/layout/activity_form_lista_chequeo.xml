<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:orientation="vertical"
    tools:context=".controller.Form_listaChequeo">

    <!-- Barra superior -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:background="#3F7DFA"
        android:elevation="6dp">

        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="Icono Lista"
            android:tint="@android:color/white" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Lista de Chequeo"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@android:color/white" />

        <ImageView
            android:id="@+id/img_logo"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:src="@drawable/img"
            android:contentDescription="Logo" />
    </LinearLayout>

    <!-- Título -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Crear Lista de Chequeo"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#212121"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="8dp" />

    <!-- Contenido con Scroll -->

    <!-- Botón Guardar -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingHorizontal="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingVertical="8dp">

            <!-- ID Lista -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="2dp"
                android:layout_marginBottom="12dp"
                android:background="#FFFFFF"
                android:backgroundTintMode="src_in"
                android:clipToOutline="true"
                android:elevation="5dp"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:text="ID Reporte"
                    android:textColor="#1565C0"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/etIdlista"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@android:color/transparent"
                    android:backgroundTint="#DDDDDD"
                    android:hint="ID (autogenerado)"
                    android:inputType="number"
                    android:paddingHorizontal="12dp"
                    android:textColor="#212121"
                    android:textSize="15sp" />
            </LinearLayout>

            <!-- Nombre Usuario -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:background="#FFFFFF"
                android:clipToOutline="true"
                android:elevation="5dp"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:text="Nombre Usuario"
                    android:textColor="#1565C0"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/etUsuarioNombre"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@android:color/transparent"
                    android:backgroundTint="#DDDDDD"
                    android:hint="Ingrese nombre"
                    android:paddingHorizontal="12dp"
                    android:textColor="#212121"
                    android:textSize="15sp" />
            </LinearLayout>

            <!-- Fecha -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:background="#FFFFFF"
                android:clipToOutline="true"
                android:elevation="5dp"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:text="Fecha"
                    android:textColor="#1565C0"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/etFecha"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@android:color/transparent"
                    android:backgroundTint="#DDDDDD"
                    android:hint="Ingrese fecha"
                    android:inputType="date"
                    android:paddingHorizontal="12dp"
                    android:textColor="#212121"
                    android:textSize="15sp" />
            </LinearLayout>

            <!-- Hora -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:background="#FFFFFF"
                android:clipToOutline="true"
                android:elevation="5dp"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:text="Hora"
                    android:textColor="#1565C0"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/etHora"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@android:color/transparent"
                    android:backgroundTint="#DDDDDD"
                    android:hint="Ingrese hora"
                    android:inputType="time"
                    android:paddingHorizontal="12dp"
                    android:textColor="#212121"
                    android:textSize="15sp" />
            </LinearLayout>

            <!-- Modelo -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:background="#FFFFFF"
                android:clipToOutline="true"
                android:elevation="5dp"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:text="Modelo"
                    android:textColor="#1565C0"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/etModelo"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@android:color/transparent"
                    android:backgroundTint="#DDDDDD"
                    android:hint="Ingrese modelo"
                    android:paddingHorizontal="12dp"
                    android:textColor="#212121"
                    android:textSize="15sp" />
            </LinearLayout>

            <!-- Marca -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:background="#FFFFFF"
                android:clipToOutline="true"
                android:elevation="5dp"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:text="Marca"
                    android:textColor="#1565C0"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/etMarca"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@android:color/transparent"
                    android:backgroundTint="#DDDDDD"
                    android:hint="Ingrese marca"
                    android:paddingHorizontal="12dp"
                    android:textColor="#212121"
                    android:textSize="15sp" />
            </LinearLayout>

            <!-- Placa -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:background="#FFFFFF"
                android:clipToOutline="true"
                android:elevation="5dp"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:text="Placa"
                    android:textColor="#1565C0"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/etPlaca"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@android:color/transparent"
                    android:backgroundTint="#DDDDDD"
                    android:hint="Ingrese placa del vehículo"
                    android:paddingHorizontal="12dp"
                    android:textColor="#212121"
                    android:textSize="15sp" />
            </LinearLayout>

            <!-- Kilometraje -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:background="#FFFFFF"
                android:clipToOutline="true"
                android:elevation="5dp"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:text="Kilometraje"
                    android:textColor="#1565C0"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/etKilometraje"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@android:color/transparent"
                    android:backgroundTint="#DDDDDD"
                    android:hint="Ingrese kilometraje"
                    android:inputType="number"
                    android:paddingHorizontal="12dp"
                    android:textColor="#212121"
                    android:textSize="15sp" />
            </LinearLayout>

            <!-- SOAT vigente -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:background="#FFFFFF"
                android:clipToOutline="true"
                android:elevation="5dp"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:text="SOAT vigente"
                    android:textColor="#1565C0"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rbSoatSi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sí" />

                    <RadioButton
                        android:id="@+id/rbSoatNo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="24dp"
                        android:text="No" />
                </RadioGroup>
            </LinearLayout>

            <!-- Técnico -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:background="#FFFFFF"
                android:clipToOutline="true"
                android:elevation="5dp"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:text="Revisado por técnico"
                    android:textColor="#1565C0"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rbTecnicoSi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sí" />

                    <RadioButton
                        android:id="@+id/rbTecnicoNo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="24dp"
                        android:text="No" />
                </RadioGroup>
            </LinearLayout>

            <!-- Observaciones -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="#FFFFFF"
                android:clipToOutline="true"
                android:elevation="5dp"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:text="Observaciones"
                    android:textColor="#1565C0"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/etObservaciones"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@android:color/transparent"
                    android:backgroundTint="#DDDDDD"
                    android:gravity="top|start"
                    android:hint="Ingrese observaciones adicionales"
                    android:inputType="textMultiLine"
                    android:paddingHorizontal="12dp"
                    android:textColor="#212121"
                    android:textSize="15sp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btnGuardarlista"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Guardar Lista de Chequeo"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:backgroundTint="#3F7DFA"
        android:textColor="@android:color/white"
        android:layout_margin="16dp"
        android:paddingVertical="14dp"
        android:elevation="5dp"
        android:layout_gravity="bottom" />

</LinearLayout>
