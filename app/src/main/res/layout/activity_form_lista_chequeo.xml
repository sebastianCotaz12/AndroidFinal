<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#E3F2FD"
    tools:context=".controller.Form_listaChequeo">

    <!-- Barra superior -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="12dp"
        android:background="#1565C0"
        android:elevation="6dp">

        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_form"
            android:tint="@android:color/white"
            android:contentDescription="Icono Lista" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Lista de Chequeo"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@android:color/white" />

        <ImageView
            android:id="@+id/img_logo"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:src="@drawable/logo"
            android:contentDescription="Logo" />
    </LinearLayout>

    <!-- TÃ­tulo -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Crear Lista de Chequeo"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#0D47A1"
        android:gravity="center"
        android:layout_marginVertical="16dp" />

    <!-- Contenedor con Scroll -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingHorizontal="16dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



            <!-- Nombre Usuario -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="14dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/bg_card_blue">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nombre Usuario"
                    android:textColor="#0D47A1"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:layout_marginBottom="6dp" />

                <EditText
                    android:id="@+id/etUsuarioNombre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Ingrese nombre"
                    android:background="@drawable/bg_edittext_blue"
                    android:padding="10dp"
                    android:inputType="textPersonName" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="14dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/bg_card_blue">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cargo"
                    android:textColor="#0D47A1"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:layout_marginBottom="6dp" />

                <EditText
                    android:id="@+id/etUsuarioCargo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Cargo del usuario"
                    android:background="@drawable/bg_edittext_blue"
                    android:padding="10dp"
                    android:enabled="false" />
            </LinearLayout>

            <!-- Fecha -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="14dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/bg_card_blue">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Fecha"
                    android:textColor="#0D47A1"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:layout_marginBottom="6dp" />

                <EditText
                    android:id="@+id/etFecha"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Seleccione fecha"
                    android:background="@drawable/bg_edittext_blue"
                    android:padding="10dp"
                    android:focusable="false"
                    android:inputType="date" />
            </LinearLayout>

            <!-- Hora -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="14dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/bg_card_blue">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hora"
                    android:textColor="#0D47A1"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:layout_marginBottom="6dp" />

                <EditText
                    android:id="@+id/etHora"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Seleccione hora"
                    android:background="@drawable/bg_edittext_blue"
                    android:padding="10dp"
                    android:inputType="time" />
            </LinearLayout>

            <!-- Modelo -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="14dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/bg_card_blue">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Modelo"
                    android:textColor="#0D47A1"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:layout_marginBottom="6dp" />

                <EditText
                    android:id="@+id/etModelo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Ingrese modelo"
                    android:background="@drawable/bg_edittext_blue"
                    android:padding="10dp"
                    android:inputType="text" />
            </LinearLayout>

            <!-- Marca -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="14dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/bg_card_blue">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Marca"
                    android:textColor="#0D47A1"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:layout_marginBottom="6dp" />

                <EditText
                    android:id="@+id/etMarca"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Ingrese marca"
                    android:background="@drawable/bg_edittext_blue"
                    android:padding="10dp"
                    android:inputType="text" />
            </LinearLayout>

            <!-- Placa -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="14dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/bg_card_blue">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Placa"
                    android:textColor="#0D47A1"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:layout_marginBottom="6dp" />

                <EditText
                    android:id="@+id/etPlaca"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Ingrese placa"
                    android:background="@drawable/bg_edittext_blue"
                    android:padding="10dp"
                    android:inputType="text" />
            </LinearLayout>

            <!-- Kilometraje -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="14dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/bg_card_blue">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kilometraje"
                    android:textColor="#0D47A1"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:layout_marginBottom="6dp" />

                <EditText
                    android:id="@+id/etKilometraje"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Ingrese kilometraje"
                    android:background="@drawable/bg_edittext_blue"
                    android:padding="10dp"
                    android:inputType="number" />
            </LinearLayout>

            <!-- SOAT -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="14dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/bg_card_blue">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="SOAT"
                    android:textColor="#0D47A1"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:layout_marginBottom="6dp" />

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rbSoatSi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Si" />

                    <RadioButton
                        android:id="@+id/rbSoatNo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No" />
                </RadioGroup>
            </LinearLayout>

            <!-- TÃ©cnico -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="14dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/bg_card_blue">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="RevisiÃ³n TÃ©cnica"
                    android:textColor="#0D47A1"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:layout_marginBottom="6dp" />

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rbTecnicoSi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Si" />

                    <RadioButton
                        android:id="@+id/rbTecnicoNo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No" />
                </RadioGroup>
            </LinearLayout>

            <!-- Observaciones -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="14dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/bg_card_blue">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Observaciones"
                    android:textColor="#0D47A1"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:layout_marginBottom="6dp" />

                <EditText
                    android:id="@+id/etObservaciones"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:hint="Ingrese observaciones"
                    android:gravity="top|start"
                    android:background="@drawable/bg_edittext_blue"
                    android:padding="10dp"
                    android:inputType="textMultiLine" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- BotÃ³n Guardar -->
    <Button
        android:id="@+id/btnGuardarlista"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Guardar Lista de Chequeo"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:backgroundTint="#0D47A1"
        android:textColor="@android:color/white"
        android:elevation="8dp"
        android:layout_margin="16dp"
        android:paddingVertical="14dp" />
</LinearLayout>
