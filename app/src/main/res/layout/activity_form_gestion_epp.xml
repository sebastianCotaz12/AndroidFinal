<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#E3F2FD"
    tools:context=".controller.Form_gestionEpp">

    <!-- Barra superior -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="12dp"
        android:background="#1565C0"
        android:elevation="6dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_form"
            android:tint="@android:color/white"
            android:contentDescription="Icono Gestión EPP" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Gestión EPP"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@android:color/white" />
        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:src="@drawable/logo"
            android:contentDescription="Logo" />
    </LinearLayout>

    <!-- Título -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Registrar Entrega de EPP"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#0D47A1"
        android:gravity="center"
        android:layout_marginVertical="16dp" />

    <!-- Contenedor desplazable -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingHorizontal="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Nombre -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="14dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/bg_card_blue">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nombre Usuario"
                    android:textColor="#0D47A1"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:layout_marginBottom="6dp" />

                <EditText
                    android:id="@+id/etNombreUsuario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nombre usuario"
                    android:background="@drawable/bg_edittext_blue"
                    android:padding="10dp"
                    android:inputType="text"
                    android:enabled="false" />
            </LinearLayout>

            <!-- Cargo -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="14dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/bg_card_blue">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cargo"
                    android:textColor="#0D47A1"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:layout_marginBottom="6dp" />

                <EditText
                    android:id="@+id/etCargoUsuario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Cargo"
                    android:background="@drawable/bg_edittext_blue"
                    android:padding="10dp"
                    android:inputType="text"
                    android:enabled="false" />
            </LinearLayout>

            <!-- Área -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="14dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/bg_card_blue">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Área"
                    android:textColor="#0D47A1"
                    android:textStyle="bold"
                    android:layout_marginBottom="6dp" />

                <EditText
                    android:id="@+id/etArea"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Se completa automáticamente"
                    android:enabled="false"
                    android:background="@drawable/bg_edittext_blue"
                    android:padding="10dp" />
            </LinearLayout>

            <!-- Cédula -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="14dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/bg_card_blue">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cédula"
                    android:textColor="#0D47A1"
                    android:textStyle="bold"
                    android:layout_marginBottom="6dp" />

                <EditText
                    android:id="@+id/etCedula"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Cédula del empleado"
                    android:inputType="number"
                    android:background="@drawable/bg_edittext_blue"
                    android:padding="10dp" />
            </LinearLayout>

            <!-- Cargo -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="14dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/bg_card_blue">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cargo"
                    android:textColor="#0D47A1"
                    android:textStyle="bold"
                    android:layout_marginBottom="6dp" />

                <EditText
                    android:id="@+id/etCargo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Cargo del empleado"
                    android:background="@drawable/bg_edittext_blue"
                    android:padding="10dp" />
            </LinearLayout>

            <!-- Fecha entrega -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="14dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/bg_card_blue">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Fecha de entrega"
                    android:textColor="#0D47A1"
                    android:textStyle="bold"
                    android:layout_marginBottom="6dp" />

                <EditText
                    android:id="@+id/etFechaEntrega"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Selecciona una fecha"
                    android:focusable="false"
                    android:clickable="true"
                    android:background="@drawable/bg_edittext_blue"
                    android:padding="10dp" />
            </LinearLayout>

            <!-- Producto -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="14dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/bg_card_blue">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Producto EPP"
                    android:textColor="#0D47A1"
                    android:textStyle="bold"
                    android:layout_marginBottom="6dp" />

                <EditText
                    android:id="@+id/etProductos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Ejemplo: Guantes, Casco"
                    android:background="@drawable/bg_edittext_blue"
                    android:padding="10dp" />
            </LinearLayout>

            <!-- Cantidad -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="14dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/bg_card_blue">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cantidad"
                    android:textColor="#0D47A1"
                    android:textStyle="bold"
                    android:layout_marginBottom="6dp" />

                <EditText
                    android:id="@+id/etCantidad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Cantidad de elementos"
                    android:inputType="number"
                    android:background="@drawable/bg_edittext_blue"
                    android:padding="10dp" />
            </LinearLayout>

            <!-- Importancia -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="14dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/bg_card_blue">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Importancia"
                    android:textColor="#0D47A1"
                    android:textStyle="bold"
                    android:layout_marginBottom="6dp" />

                <Spinner
                    android:id="@+id/spImportancia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_edittext_blue" />
            </LinearLayout>

            <!-- Estado -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="14dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/bg_card_blue">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Estado"
                    android:textColor="#0D47A1"
                    android:textStyle="bold"
                    android:layout_marginBottom="6dp" />

                <Spinner
                    android:id="@+id/spEstado"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_edittext_blue" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Botón principal -->
    <Button
        android:id="@+id/btnEnviarGestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Guardar Gestión EPP"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:backgroundTint="#0D47A1"
        android:textColor="@android:color/white"
        android:elevation="8dp"
        android:layout_margin="16dp"
        android:paddingVertical="14dp" />
</LinearLayout>
