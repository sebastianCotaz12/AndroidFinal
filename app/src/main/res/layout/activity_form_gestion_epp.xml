<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5"
    tools:context=".controller.Form_gestionEpp">

    <!-- Barra superior -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="12dp"
        android:background="#3F7DFA"
        android:elevation="6dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_launcher_foreground"
            android:contentDescription="Icono Gestión EPP" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Gestión EPP"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Registrar Entrega de EPP"
        android:textSize="22sp"
        android:textColor="#212121"
        android:gravity="center"
        android:layout_marginVertical="16dp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingHorizontal="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- ID Usuario -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:background="#FFFFFF"
                android:elevation="2dp"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ID Usuario"
                    android:textColor="#1565C0"
                    android:textStyle="bold"
                    android:layout_marginEnd="8dp" />

                <EditText
                    android:id="@+id/etIdUsuario"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:hint="Se completa automáticamente"
                    android:enabled="false"
                    android:background="@android:color/transparent"
                    android:padding="8dp" />
            </LinearLayout>

            <!-- Área -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:background="#FFFFFF"
                android:elevation="2dp"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Área"
                    android:textColor="#1565C0"
                    android:textStyle="bold"
                    android:layout_marginEnd="8dp" />

                <EditText
                    android:id="@+id/etArea"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:hint="Se completa automáticamente"
                    android:enabled="false"
                    android:background="@android:color/transparent"
                    android:padding="8dp" />
            </LinearLayout>

            <!-- Cédula -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:background="#FFFFFF"
                android:elevation="2dp"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cédula"
                    android:textColor="#1565C0"
                    android:textStyle="bold"
                    android:layout_marginEnd="8dp" />

                <EditText
                    android:id="@+id/etCedula"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:hint="Cédula del empleado"
                    android:inputType="number"
                    android:background="@android:color/transparent"
                    android:padding="8dp" />
            </LinearLayout>

            <!-- Cargo -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:background="#FFFFFF"
                android:elevation="2dp"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cargo"
                    android:textColor="#1565C0"
                    android:textStyle="bold"
                    android:layout_marginEnd="8dp" />

                <EditText
                    android:id="@+id/etCargo"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:hint="Cargo del empleado"
                    android:background="@android:color/transparent"
                    android:padding="8dp" />
            </LinearLayout>

            <!-- Fecha entrega -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:background="#FFFFFF"
                android:elevation="2dp"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fecha de entrega"
                    android:textColor="#1565C0"
                    android:textStyle="bold"
                    android:layout_marginEnd="8dp" />

                <EditText
                    android:id="@+id/etFechaEntrega"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:hint="Selecciona una fecha"
                    android:focusable="false"
                    android:clickable="true"
                    android:background="@android:color/transparent"
                    android:padding="8dp" />
            </LinearLayout>

            <!-- Producto -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:background="#FFFFFF"
                android:elevation="2dp"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Producto EPP"
                    android:textColor="#1565C0"
                    android:textStyle="bold"
                    android:layout_marginEnd="8dp" />

                <EditText
                    android:id="@+id/etProductos"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:hint="Ejemplo: Guantes, Casco"
                    android:background="@android:color/transparent"
                    android:padding="8dp" />
            </LinearLayout>

            <!-- Cantidad -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:background="#FFFFFF"
                android:elevation="2dp"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cantidad"
                    android:textColor="#1565C0"
                    android:textStyle="bold"
                    android:layout_marginEnd="8dp" />

                <EditText
                    android:id="@+id/etCantidad"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:hint="Cantidad de elementos"
                    android:inputType="number"
                    android:background="@android:color/transparent"
                    android:padding="8dp" />
            </LinearLayout>

            <!-- Importancia -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:background="#FFFFFF"
                android:elevation="2dp"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Importancia"
                    android:textColor="#1565C0"
                    android:textStyle="bold"
                    android:layout_marginEnd="8dp" />

                <Spinner
                    android:id="@+id/spImportancia"
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />
            </LinearLayout>

            <!-- Estado -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:background="#FFFFFF"
                android:elevation="2dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Estado"
                    android:textColor="#1565C0"
                    android:textStyle="bold"
                    android:layout_marginEnd="8dp" />

                <Spinner
                    android:id="@+id/spEstado"
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btnEnviarGestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Guardar Gestión EPP"
        android:backgroundTint="#3F7DFA"
        android:textColor="@android:color/white"
        android:layout_margin="16dp"
        android:paddingVertical="12dp" />
</LinearLayout>
