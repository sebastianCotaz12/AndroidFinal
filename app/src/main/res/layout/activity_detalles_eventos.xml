<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F4F8"
    android:padding="16dp">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="18dp"
        app:cardElevation="8dp"
        android:padding="0dp"
        android:backgroundTint="#FFFFFF"
        app:strokeWidth="1dp"
        app:strokeColor="#E0E6ED">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Imagen principal -->
            <ImageView
                android:id="@+id/imgEventoDetalle"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:scaleType="centerCrop"
                android:src="@drawable/placeholder_image"
                android:contentDescription="Imagen del evento"
                android:layout_marginBottom="16dp"/>

            <!-- Título -->
            <TextView
                android:id="@+id/tvTituloEventoDetalle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Título del evento"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#1A1A1A"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="8dp" />

            <!-- Fecha -->
            <TextView
                android:id="@+id/tvFechaEventoDetalle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="📅 10/10/2025"
                android:textSize="14sp"
                android:textColor="#5F6C7B"
                android:fontFamily="sans-serif"
                android:layout_marginBottom="4dp" />

            <!-- Usuario -->
            <TextView
                android:id="@+id/tvUsuarioEventoDetalle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="👤 Publicado por: Usuario"
                android:textSize="14sp"
                android:textColor="#5F6C7B"
                android:fontFamily="sans-serif"
                android:layout_marginBottom="16dp" />

            <!-- Descripción -->
            <TextView
                android:id="@+id/tvDescripcionEventoDetalle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Aquí irá la descripción detallada del evento. Este texto explica todos los detalles relevantes y da contexto al usuario."
                android:textSize="16sp"
                android:textColor="#333333"
                android:fontFamily="sans-serif"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="24dp" />

            <!-- Botón ver archivo -->
            <Button
                android:id="@+id/btnAbrirArchivo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="📎 Ver archivo adjunto"
                android:textColor="@android:color/white"
                android:backgroundTint="#2196F3"
                android:fontFamily="sans-serif-medium"
                android:elevation="3dp"
                android:layout_marginBottom="12dp" />

            <!-- Botón volver -->
            <Button
                android:id="@+id/btnVolver"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="⬅️ Volver"
                android:textColor="@android:color/white"
                android:backgroundTint="#9E9E9E"
                android:fontFamily="sans-serif-medium"
                android:elevation="2dp" />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</ScrollView>
