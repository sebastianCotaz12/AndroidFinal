<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F8FC">

    <!-- ENCABEZADO CON DEGRADADO AZUL -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/gradient_background"
        android:elevation="6dp"
        android:paddingTop="32dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Detalle del Evento"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium" />
    </LinearLayout>

    <!-- CONTENIDO SCROLLABLE -->
    <ScrollView
        android:layout_below="@id/header"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:layout_above="@+id/btnVolver">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="80dp">

            <!-- Título -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="14dp"
                app:cardUseCompatPadding="true"
                android:layout_marginBottom="14dp"
                android:backgroundTint="#FFFFFF"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="18dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Título del Evento"
                        android:textStyle="bold"
                        android:textSize="17sp"
                        android:textColor="#0D47A1" />

                    <TextView
                        android:id="@+id/tvTituloEventoDetalle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#455A64"
                        android:textSize="15sp"
                        android:layout_marginTop="6dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Fecha -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="14dp"
                app:cardUseCompatPadding="true"
                android:layout_marginBottom="14dp"
                android:backgroundTint="#FFFFFF"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="18dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Fecha"
                        android:textStyle="bold"
                        android:textSize="17sp"
                        android:textColor="#0D47A1" />

                    <TextView
                        android:id="@+id/tvFechaEventoDetalle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#455A64"
                        android:textSize="15sp"
                        android:layout_marginTop="6dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Usuario -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="14dp"
                app:cardUseCompatPadding="true"
                android:layout_marginBottom="14dp"
                android:backgroundTint="#FFFFFF"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="18dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Publicado por"
                        android:textStyle="bold"
                        android:textSize="17sp"
                        android:textColor="#0D47A1" />

                    <TextView
                        android:id="@+id/tvUsuarioEventoDetalle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#455A64"
                        android:textSize="15sp"
                        android:layout_marginTop="6dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Descripción -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="14dp"
                app:cardUseCompatPadding="true"
                android:layout_marginBottom="14dp"
                android:backgroundTint="#FFFFFF"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="18dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Descripción"
                        android:textStyle="bold"
                        android:textSize="17sp"
                        android:textColor="#0D47A1" />

                    <TextView
                        android:id="@+id/tvDescripcionEventoDetalle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#455A64"
                        android:textSize="15sp"
                        android:layout_marginTop="6dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Imagen del evento -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="14dp"
                app:cardUseCompatPadding="true"
                android:layout_marginBottom="20dp"
                android:backgroundTint="#FFFFFF"
                app:cardElevation="6dp">

                <ImageView
                    android:id="@+id/imgEventoDetalle"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:contentDescription="Imagen del evento"
                 />
            </androidx.cardview.widget.CardView>

            <!-- Botón Ver archivo -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAbrirArchivo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="📎 Ver archivo adjunto"
                android:textColor="@android:color/white"
                android:backgroundTint="#2196F3"
                android:fontFamily="sans-serif-medium"
                android:elevation="3dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp" />
        </LinearLayout>
    </ScrollView>

    <!-- BOTÓN VOLVER -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnVolver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="20dp"
        android:text="⬅️ Volver"
        android:textColor="@android:color/white"
        android:backgroundTint="#90CAF9"
        android:elevation="6dp" />

</RelativeLayout>
