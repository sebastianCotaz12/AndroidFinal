<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#E3F2FD"
    tools:context=".controller.Menu">

    <!-- Header de perfil con gradiente azul -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="25dp"
        app:cardElevation="12dp"
        app:cardBackgroundColor="@android:color/white"
        app:strokeColor="#0D47A1"
        app:strokeWidth="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="20dp">

            <!-- Logo y avatar con gradiente azul -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/iv_logo"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@mipmap/logo"
                    android:contentDescription="Logo App"
                    android:background="@drawable/circle_background"
                    android:padding="8dp"
                    android:scaleType="centerInside"
                    android:elevation="6dp"
                    android:clipToOutline="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SST"
                    android:textColor="#0D47A1"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginTop="6dp"
                    android:fontFamily="sans-serif-medium" />
            </LinearLayout>

            <!-- Informaci贸n del usuario -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="20dp">

                <TextView
                    android:id="@+id/tvBienvenida"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Bienvenido, Usuario"
                    android:textColor="#0D47A1"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:id="@+id/tvEmpresa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Empresa: -"
                    android:textColor="#1565C0"
                    android:textSize="14sp"
                    android:layout_marginTop="2dp"
                    android:fontFamily="sans-serif" />

                <TextView
                    android:id="@+id/tvArea"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" rea: -"
                    android:textColor="#1565C0"
                    android:textSize="14sp"
                    android:layout_marginTop="1dp"
                    android:fontFamily="sans-serif" />

                <!-- Botones de perfil -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_edit_profile"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:text="Editar Perfil"
                        android:textColor="@android:color/white"
                        android:textSize="12sp"
                        android:textAllCaps="false"
                        app:backgroundTint="@color/azul"
                        app:cornerRadius="16dp"
                        app:iconTint="@android:color/white"
                        app:iconSize="16dp"
                        app:elevation="2dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnCerrarSesion"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:text="Cerrar sesi贸n"
                        android:layout_marginStart="8dp"
                        android:textColor="@android:color/white"
                        android:textSize="12sp"
                        android:textAllCaps="false"
                        app:backgroundTint="#B71C1C"
                        app:cornerRadius="16dp"
                        app:icon="@android:drawable/ic_lock_power_off"
                        app:iconTint="@android:color/white"
                        app:iconSize="16dp"
                        app:elevation="2dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Barra de b煤squeda con tema azul -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@android:color/white"
        app:strokeColor="#1976D2"
        app:strokeWidth="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="14dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_menu_search"
                android:tint="#0D47A1"
                android:layout_marginEnd="12dp" />

            <EditText
                android:id="@+id/etSearch"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Buscar funcionalidades..."
                android:background="@android:color/transparent"
                android:padding="4dp"
                android:textColor="#0D47A1"
                android:textColorHint="#1565C0"
                android:textSize="15sp"
                android:fontFamily="sans-serif" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Herramientas Principales - Scroll Horizontal -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="12dp"
        android:text="Herramientas Principales"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-condensed" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:paddingHorizontal="16dp"
        android:fadingEdgeLength="40dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Gesti贸n EPP -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_gestion_epp"
                android:layout_width="150dp"
                android:layout_height="180dp"
                android:layout_marginEnd="12dp"
                app:cardCornerRadius="22dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="@android:color/white"
                app:strokeColor="#1976D2"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <ImageView
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:contentDescription="Gesti贸n EPP"
                        android:src="@drawable/epp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gesti贸n EPP"
                        android:textColor="#0D47A1"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginTop="12dp"
                        android:textAlignment="center"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Control de equipos"
                        android:textColor="#1565C0"
                        android:textSize="12sp"
                        android:layout_marginTop="4dp"
                        android:textAlignment="center"
                        android:fontFamily="sans-serif" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Reportes -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_reportes"
                android:layout_width="150dp"
                android:layout_height="180dp"
                android:layout_marginEnd="12dp"
                app:cardCornerRadius="22dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="@android:color/white"
                app:strokeColor="#1976D2"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <ImageView
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:contentDescription="Reportes"
                        android:src="@drawable/reportes" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Reportes"
                        android:textColor="#0D47A1"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginTop="12dp"
                        android:textAlignment="center"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Generar informes"
                        android:textColor="#1565C0"
                        android:textSize="12sp"
                        android:layout_marginTop="4dp"
                        android:textAlignment="center"
                        android:fontFamily="sans-serif" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Actividades L煤dicas -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_actividades"
                android:layout_width="150dp"
                android:layout_height="180dp"
                android:layout_marginEnd="12dp"
                app:cardCornerRadius="22dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="@android:color/white"
                app:strokeColor="#1976D2"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <ImageView
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:contentDescription="Actividades L煤dicas"
                        android:src="@drawable/ludicas" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Actividades L煤dicas"
                        android:textColor="#0D47A1"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginTop="12dp"
                        android:textAlignment="center"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Training interactivo"
                        android:textColor="#1565C0"
                        android:textSize="12sp"
                        android:layout_marginTop="4dp"
                        android:textAlignment="center"
                        android:fontFamily="sans-serif" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Lista de Chequeo -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_lista_chequeo"
                android:layout_width="150dp"
                android:layout_height="180dp"
                android:layout_marginEnd="12dp"
                app:cardCornerRadius="22dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="@android:color/white"
                app:strokeColor="#1976D2"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <ImageView
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:contentDescription="Lista de Chequeo"
                        android:src="@drawable/chequeo" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lista de Chequeo"
                        android:textColor="#0D47A1"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginTop="12dp"
                        android:textAlignment="center"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Verificaciones"
                        android:textColor="#1565C0"
                        android:textSize="12sp"
                        android:layout_marginTop="4dp"
                        android:textAlignment="center"
                        android:fontFamily="sans-serif" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </HorizontalScrollView>

    <!-- Otras Funcionalidades -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="12dp"
        android:text="Otras Funcionalidades"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-condensed" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingHorizontal="16dp"
        android:fadingEdgeLength="32dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Fila 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <!-- Blog -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_blog"
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="6dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@android:color/white"
                    app:strokeColor="#1976D2"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:contentDescription="Blog"
                            android:src="@drawable/blog" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Eventos"
                            android:textColor="#0D47A1"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:layout_marginTop="8dp"
                            android:textAlignment="center"
                            android:fontFamily="sans-serif-medium" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Asesoramiento -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_asesoramiento"
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_weight="1"
                    android:layout_marginStart="6dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@android:color/white"
                    app:strokeColor="#1976D2"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:contentDescription="Asesoramiento"
                            android:src="@drawable/asesoramiento" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Asesoramiento"
                            android:textColor="#0D47A1"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:layout_marginTop="8dp"
                            android:textAlignment="center"
                            android:fontFamily="sans-serif-medium" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>