<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    tools:context=".controller.Menu">

    <!-- Barra superior -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="#3F7DFA"
        android:paddingHorizontal="16dp"
        android:elevation="6dp">

        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:src="@mipmap/logo"
            android:contentDescription="Logo App"
            android:background="@android:color/white"
            android:padding="8dp"
            android:scaleType="centerInside"
            android:layout_marginEnd="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SST"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

    </LinearLayout>

    <!-- Encabezado con bienvenida -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#F5F5F5">

        <TextView
            android:id="@+id/tvBienvenida"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bienvenido, Usuario"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvEmpresa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Empresa: -"
            android:textColor="@android:color/black"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/tvArea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Área: -"
            android:textColor="@android:color/black"
            android:layout_marginTop="2dp" />

        <Button
            android:id="@+id/btnCerrarSesion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cerrar Sesión"
            android:backgroundTint="#FF3D00"
            android:textColor="@android:color/white"
            android:layout_marginTop="10dp" />
    </LinearLayout>

    <!-- Título -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Salud y Seguridad en el Trabajo"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-condensed" />

    <!-- Barra de búsqueda -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="12dp">

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Buscar..."
                android:background="@android:color/transparent"
                android:padding="8dp"
                android:textColor="#000000"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@android:drawable/ic_menu_search"
                android:tint="#3F7DFA" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Menú de opciones -->
    <!-- Menú de opciones --> <ScrollView android:layout_width="match_parent" android:layout_height="match_parent" android:paddingHorizontal="8dp"> <GridLayout android:id="@+id/menu_grid" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:columnCount="2" android:alignmentMode="alignMargins" android:useDefaultMargins="true"> <!-- Gestión EPP --> <com.google.android.material.card.MaterialCardView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_margin="10dp" android:layout_columnWeight="1" app:cardCornerRadius="18dp" app:cardElevation="10dp" app:cardBackgroundColor="@android:color/white"> <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:gravity="center" android:padding="14dp"> <ImageView android:layout_width="72dp" android:layout_height="72dp" android:src="@drawable/epp" android:contentDescription="Icono" /> <com.google.android.material.button.MaterialButton android:id="@+id/btn_GestionEpp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Gestión EPP" android:textColor="@android:color/white" android:layout_marginTop="8dp" app:cornerRadius="12dp" app:icon="@android:drawable/ic_menu_manage" app:iconTint="@android:color/white" app:backgroundTint="#3F7DFA" /> </LinearLayout> </com.google.android.material.card.MaterialCardView> <!-- Reportes --> <com.google.android.material.card.MaterialCardView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_margin="10dp" android:layout_columnWeight="1" app:cardCornerRadius="18dp" app:cardElevation="10dp" app:cardBackgroundColor="@android:color/white"> <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:gravity="center" android:padding="14dp"> <ImageView android:layout_width="72dp" android:layout_height="72dp" android:src="@drawable/reportes" android:contentDescription="Icono" /> <com.google.android.material.button.MaterialButton android:id="@+id/btn_Reportes" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Reportes" android:textColor="@android:color/white" android:layout_marginTop="8dp" app:cornerRadius="12dp" app:icon="@android:drawable/ic_menu_agenda" app:iconTint="@android:color/white" app:backgroundTint="#3F7DFA" /> </LinearLayout> </com.google.android.material.card.MaterialCardView> <!-- Actividades Lúdicas --> <com.google.android.material.card.MaterialCardView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_margin="10dp" android:layout_columnWeight="1" app:cardCornerRadius="18dp" app:cardElevation="10dp" app:cardBackgroundColor="@android:color/white"> <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:gravity="center" android:padding="14dp"> <ImageView android:layout_width="72dp" android:layout_height="72dp" android:src="@drawable/ludicas" android:contentDescription="Icono" /> <com.google.android.material.button.MaterialButton android:id="@+id/btn_Act" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Actividades Lúdicas" android:textColor="@android:color/white" android:layout_marginTop="8dp" app:cornerRadius="12dp" app:icon="@android:drawable/ic_menu_edit" app:iconTint="@android:color/white" app:backgroundTint="#3F7DFA" /> </LinearLayout> </com.google.android.material.card.MaterialCardView> <!-- Lista de Chequeo --> <com.google.android.material.card.MaterialCardView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_margin="10dp" android:layout_columnWeight="1" app:cardCornerRadius="18dp" app:cardElevation="10dp" app:cardBackgroundColor="@android:color/white"> <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:gravity="center" android:padding="14dp"> <ImageView android:layout_width="72dp" android:layout_height="72dp" android:src="@drawable/chequeo" android:contentDescription="Icono" /> <com.google.android.material.button.MaterialButton android:id="@+id/btn_ListaChequeo" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Lista de Chequeo" android:textColor="@android:color/white" android:layout_marginTop="8dp" app:cornerRadius="12dp" app:icon="@android:drawable/ic_menu_view" app:iconTint="@android:color/white" app:backgroundTint="#3F7DFA" /> </LinearLayout> </com.google.android.material.card.MaterialCardView> <!-- Blog --> <com.google.android.material.card.MaterialCardView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_margin="10dp" android:layout_columnWeight="1" app:cardCornerRadius="18dp" app:cardElevation="10dp" app:cardBackgroundColor="@android:color/white"> <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:gravity="center" android:padding="14dp"> <ImageView android:layout_width="72dp" android:layout_height="72dp" android:src="@drawable/blog" android:contentDescription="Icono" /> <com.google.android.material.button.MaterialButton android:id="@+id/btn_Blog" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Blog" android:textColor="@android:color/white" android:layout_marginTop="8dp" app:cornerRadius="12dp" app:icon="@android:drawable/ic_menu_info_details" app:iconTint="@android:color/white" app:backgroundTint="#3F7DFA" /> </LinearLayout> </com.google.android.material.card.MaterialCardView> <!-- Asesoramiento --> <com.google.android.material.card.MaterialCardView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_margin="10dp" android:layout_columnWeight="1" app:cardCornerRadius="18dp" app:cardElevation="10dp" app:cardBackgroundColor="@android:color/white"> <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:gravity="center" android:padding="14dp"> <ImageView android:layout_width="72dp" android:layout_height="72dp" android:src="@drawable/asesoramiento" android:contentDescription="Icono" /> <com.google.android.material.button.MaterialButton android:id="@+id/btn_Asesoramiento" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Asesoramiento" android:textColor="@android:color/white" android:layout_marginTop="8dp" app:cornerRadius="12dp" app:icon="@android:drawable/ic_menu_call" app:iconTint="@android:color/white" app:backgroundTint="#3F7DFA" /> </LinearLayout> </com.google.android.material.card.MaterialCardView> </GridLayout> </ScrollView>
</LinearLayout>
