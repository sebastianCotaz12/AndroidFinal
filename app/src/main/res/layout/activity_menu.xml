<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_gradient"
    tools:context=".controller.Menu">

    <!-- Header de perfil mejorado -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="46dp"
        android:layout_margin="16dp"
        app:cardCornerRadius="28dp"
        app:cardElevation="36dp"
        app:cardBackgroundColor="@android:color/white"
        app:strokeColor="#0D47A1"
        app:strokeWidth="1.5dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="24dp">

            <!-- Avatar con gradiente mejorado -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:cardCornerRadius="40dp"
                    app:cardElevation="8dp"
                    app:strokeColor="#0D47A1"
                    app:strokeWidth="1dp">

                    <ImageView
                        android:id="@+id/iv_logo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@mipmap/logo"
                        android:contentDescription="Logo App"
                        android:padding="12dp"
                        android:scaleType="centerInside"
                        android:clipToOutline="true" />
                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SST"
                    android:textColor="#0D47A1"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp"
                    android:fontFamily="sans-serif-medium"
                    android:letterSpacing="0.5" />
            </LinearLayout>

            <!-- Informaci贸n del usuario mejorada -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="24dp">

                <TextView
                    android:id="@+id/tvBienvenida"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Bienvenido, Usuario"
                    android:textColor="#0D47A1"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"
                    android:letterSpacing="0.1" />

                <TextView
                    android:id="@+id/tvEmpresa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Empresa: -"
                    android:textColor="#1565C0"
                    android:textSize="15sp"
                    android:layout_marginTop="4dp"
                    android:fontFamily="sans-serif"
                    android:letterSpacing="0.05" />

                <TextView
                    android:id="@+id/tvArea"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" rea: -"
                    android:textColor="#1565C0"
                    android:textSize="15sp"
                    android:layout_marginTop="2dp"
                    android:fontFamily="sans-serif"
                    android:letterSpacing="0.05" />

                <!-- Botones de perfil mejorados -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_edit_profile"
                        android:layout_width="0dp"
                        android:layout_height="44dp"
                        android:layout_weight="1"
                        android:text="Editar Perfil"
                        android:textColor="@android:color/white"
                        android:textSize="10sp"
                        android:textAllCaps="false"
                        app:backgroundTint="#0D47A1"
                        app:cornerRadius="20dp"
                        app:icon="@android:drawable/ic_menu_edit"
                        app:iconTint="@android:color/white"
                        app:iconSize="18dp"
                        app:iconGravity="textStart"
                        app:iconPadding="8dp"
                        app:elevation="4dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnCerrarSesion"
                        android:layout_width="0dp"
                        android:layout_height="44dp"
                        android:layout_weight="1"
                        android:text="Cerrar sesi贸n"
                        android:layout_marginStart="12dp"
                        android:textColor="@android:color/white"
                        android:textSize="10sp"
                        android:textAllCaps="false"
                        app:backgroundTint="#B71C1C"
                        app:cornerRadius="20dp"
                        app:icon="@android:drawable/ic_lock_power_off"
                        app:iconTint="@android:color/white"
                        app:iconSize="18dp"
                        app:iconGravity="textStart"
                        app:iconPadding="8dp"
                        app:elevation="4dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Barra de b煤squeda mejorada -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="20dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@android:color/white"
        app:strokeColor="#1976D2"
        app:strokeWidth="1dp"/>

    <!-- Secci贸n de Herramientas Principales mejorada -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Herramientas Principales"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-condensed"
            android:letterSpacing="0.05" />


    </LinearLayout>

    <!-- Scroll horizontal mejorado -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:paddingHorizontal="16dp"
        android:fadingEdgeLength="60dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingEnd="16dp">

            <!-- Gesti贸n EPP mejorado -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_gestion_epp"
                android:layout_width="160dp"
                android:layout_height="190dp"
                android:layout_marginEnd="16dp"
                app:cardCornerRadius="28dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@android:color/white"
                app:strokeColor="#1976D2"
                app:strokeWidth="1.5dp"
                android:foreground="?selectableItemBackground"
                android:clickable="true"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:contentDescription="Gesti贸n EPP"
                        android:src="@drawable/epp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gesti贸n EPP"
                        android:textColor="#0D47A1"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:layout_marginTop="16dp"
                        android:textAlignment="center"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Control de equipos"
                        android:textColor="#1565C0"
                        android:textSize="13sp"
                        android:layout_marginTop="6dp"
                        android:textAlignment="center"
                        android:fontFamily="sans-serif" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Reportes mejorado -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_reportes"
                android:layout_width="160dp"
                android:layout_height="190dp"
                android:layout_marginEnd="16dp"
                app:cardCornerRadius="28dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@android:color/white"
                app:strokeColor="#1976D2"
                app:strokeWidth="1.5dp"
                android:foreground="?selectableItemBackground"
                android:clickable="true"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:contentDescription="Reportes"
                        android:src="@drawable/reportes" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Reportes"
                        android:textColor="#0D47A1"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:layout_marginTop="16dp"
                        android:textAlignment="center"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Generar informes"
                        android:textColor="#1565C0"
                        android:textSize="13sp"
                        android:layout_marginTop="6dp"
                        android:textAlignment="center"
                        android:fontFamily="sans-serif" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Actividades L煤dicas mejorado -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_actividades"
                android:layout_width="160dp"
                android:layout_height="190dp"
                android:layout_marginEnd="16dp"
                app:cardCornerRadius="28dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@android:color/white"
                app:strokeColor="#1976D2"
                app:strokeWidth="1.5dp"
                android:foreground="?selectableItemBackground"
                android:clickable="true"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:contentDescription="Actividades L煤dicas"
                        android:src="@drawable/ludicas" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Actividades L煤dicas"
                        android:textColor="#0D47A1"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:layout_marginTop="16dp"
                        android:textAlignment="center"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Training interactivo"
                        android:textColor="#1565C0"
                        android:textSize="13sp"
                        android:layout_marginTop="6dp"
                        android:textAlignment="center"
                        android:fontFamily="sans-serif" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Lista de Chequeo mejorado -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_lista_chequeo"
                android:layout_width="160dp"
                android:layout_height="190dp"
                android:layout_marginEnd="16dp"
                app:cardCornerRadius="28dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@android:color/white"
                app:strokeColor="#1976D2"
                app:strokeWidth="1.5dp"
                android:foreground="?selectableItemBackground"
                android:clickable="true"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:contentDescription="Lista de Chequeo"
                        android:src="@drawable/chequeo" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lista de Chequeo"
                        android:textColor="#0D47A1"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:layout_marginTop="16dp"
                        android:textAlignment="center"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Verificaciones"
                        android:textColor="#1565C0"
                        android:textSize="13sp"
                        android:layout_marginTop="6dp"
                        android:textAlignment="center"
                        android:fontFamily="sans-serif" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </HorizontalScrollView>

    <!-- Secci贸n Otras Funcionalidades mejorada -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Otras Funcionalidades"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-condensed"
            android:letterSpacing="0.05" />


    </LinearLayout>

    <!-- Grid de funcionalidades mejorado -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingHorizontal="16dp"
        android:fadingEdgeLength="40dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Fila 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <!-- Blog mejorado -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_blog"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="6dp"
                    app:cardBackgroundColor="@android:color/white"
                    app:strokeColor="#1976D2"
                    app:strokeWidth="1.5dp"
                    android:foreground="?selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <ImageView
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:contentDescription="Blog"
                            android:src="@drawable/blog" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Eventos"
                            android:textColor="#0D47A1"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginTop="12dp"
                            android:textAlignment="center"
                            android:fontFamily="sans-serif-medium" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Asesoramiento mejorado -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_asesoramiento"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="6dp"
                    app:cardBackgroundColor="@android:color/white"
                    app:strokeColor="#1976D2"
                    app:strokeWidth="1.5dp"
                    android:foreground="?selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <ImageView
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:contentDescription="Asesoramiento"
                            android:src="@drawable/asesoramiento" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Asesoramiento"
                            android:textColor="#0D47A1"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginTop="12dp"
                            android:textAlignment="center"
                            android:fontFamily="sans-serif-medium" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>