<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#F8FAFC"
    android:padding="4dp">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="6dp"
        app:cardBackgroundColor="@android:color/white"
        app:strokeColor="#E2E8F0"
        app:strokeWidth="1dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical"
                android:background="@drawable/gradient_background">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="84dp"
                    android:layout_height="108dp"
                    app:cardCornerRadius="14dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@android:color/white"
                    android:layout_marginEnd="16dp"
                    android:outlineSpotShadowColor="#601976D2">

                    <ImageView
                        android:id="@+id/imgPoster"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/chequeo"
                        android:contentDescription="Imagen del reporte"
                        android:adjustViewBounds="true" />

                </com.google.android.material.card.MaterialCardView>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingVertical="2dp">

                    <TextView
                        android:id="@+id/txtNombre"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Juan Pérez"
                        android:textColor="#FFFFFF"
                        android:textSize="19sp"
                        android:textStyle="bold"
                        android:letterSpacing="0.02"
                        android:shadowColor="#40000000"
                        android:shadowDx="1"
                        android:shadowDy="1"
                        android:shadowRadius="3"
                        android:textAllCaps="false"
                        tools:text="Juan Pérez" />

                    <TextView
                        android:id="@+id/txtFecha"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="01 Sept 2025, 10:45 AM"
                        android:textColor="#E3F2FD"
                        android:textSize="12sp"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="8dp"
                        android:letterSpacing="0.01"
                        android:alpha="0.95"
                        tools:text="01 Sept 2025, 10:45 AM" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnDetalles"
                        android:layout_width="wrap_content"
                        android:layout_height="38dp"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:text="Ver Detalles"
                        android:textAllCaps="false"
                        android:textSize="14sp"
                        app:cornerRadius="19dp"
                        android:backgroundTint="#FFFFFF"
                        android:textColor="#1976D2"
                        app:icon="@drawable/ic_visibility"
                        app:iconGravity="textStart"
                        app:iconPadding="6dp"
                        app:iconSize="18dp"
                        app:iconTint="#1976D2"
                        app:elevation="3dp"
                        app:rippleColor="#301976D2" />

                </LinearLayout>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    app:cardCornerRadius="24dp"
                    app:cardBackgroundColor="#20FFFFFF"
                    app:cardElevation="3dp"
                    app:strokeColor="#40FFFFFF"
                    app:strokeWidth="1.5dp"
                    android:layout_marginStart="8dp"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageButton
                        android:id="@+id/btnDownload"
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:layout_gravity="center"
                        android:background="@android:color/transparent"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_download"
                        android:tint="#FFFFFF"
                        android:contentDescription="Descargar reporte" />

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="16dp"
                android:paddingVertical="12dp"
                android:background="#FAFBFC"
                android:gravity="center_vertical">

                <com.google.android.material.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lista de Chequeo"
                    android:textColor="#1976D2"
                    android:textSize="12sp"
                    app:chipBackgroundColor="#E3F2FD"
                    app:chipCornerRadius="10dp"
                    app:chipStrokeColor="#BBDEFB"
                    app:chipStrokeWidth="1dp" />

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>