<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:orientation="vertical"
    tools:context=".controller.Form_eventos">

    <!-- Barra superior -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="12dp"
        android:background="#2196F3"
        android:elevation="6dp">

        <ImageView
            android:id="@+id/ivLogo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="Icono Actividades" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Eventos"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@android:color/white" />

        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:src="@drawable/img"
            android:contentDescription="Logo" />
    </LinearLayout>

    <!-- Título -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Formulario Eventos"
        android:textSize="22sp"
        android:textColor="#212121"
        android:gravity="center"
        android:layout_marginVertical="16dp"
        android:textStyle="bold" />

    <!-- Formulario scrollable -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingHorizontal="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Título del Evento -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp"
                android:layout_marginBottom="12dp"
                android:background="#FFFFFF"
                android:elevation="2dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Título del Evento"
                    android:textColor="#1565C0"
                    android:textStyle="bold"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/etTituloEvento"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Ingrese el título"
                    android:background="@android:color/transparent"
                    android:padding="8dp"
                    android:inputType="text" />
            </LinearLayout>

            <!-- Fecha del Evento -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp"
                android:layout_marginBottom="12dp"
                android:background="#FFFFFF"
                android:elevation="2dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Fecha del Evento"
                    android:textColor="#1565C0"
                    android:textStyle="bold"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/etFecha"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Seleccione fecha"
                    android:focusable="false"
                    android:background="@android:color/transparent"
                    android:padding="8dp"
                    android:inputType="date" />
            </LinearLayout>

            <!-- Descripción -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp"
                android:layout_marginBottom="12dp"
                android:background="#FFFFFF"
                android:elevation="2dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Descripción"
                    android:textColor="#1565C0"
                    android:textStyle="bold"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/etDescripcion"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:hint="Ingrese descripción"
                    android:gravity="top|start"
                    android:background="@android:color/transparent"
                    android:padding="8dp"
                    android:inputType="textMultiLine" />
            </LinearLayout>

            <!-- Imagen -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp"
                android:layout_marginBottom="16dp"
                android:background="#FFFFFF"
                android:elevation="2dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Adjuntar Imagen"
                    android:textColor="#1565C0"
                    android:textStyle="bold"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/ivAdjuntar"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:src="@drawable/img"
                    android:contentDescription="Seleccionar imagen"
                    android:padding="8dp" />

                <TextView
                    android:id="@+id/tvImagenSeleccionada"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ninguna imagen seleccionada"
                    android:textColor="#808080"
                    android:paddingTop="4dp" />

                <!-- Previsualización -->
                <ImageView
                    android:id="@+id/ivPreview"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:scaleType="centerCrop"
                    android:visibility="gone"
                    android:layout_marginTop="8dp"
                    android:background="#E0E0E0" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Botón Enviar -->
    <Button
        android:id="@+id/btnEnviarEvidencia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enviar Evento"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:backgroundTint="#2196F3"
        android:textColor="@android:color/white"
        android:layout_margin="16dp"
        android:paddingVertical="12dp" />

</LinearLayout>