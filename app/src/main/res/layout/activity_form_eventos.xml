<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F8FAFC"
    tools:context=".controller.Form_eventos">

    <!-- HEADER MODERNO -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:cardCornerRadius="0dp"
        app:cardElevation="0dp"
        android:outlineProvider="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/gradient_background"
            android:gravity="center"
            android:paddingTop="50dp">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_form"
                android:tint="#FFFFFF"
                android:contentDescription="Eventos"
                android:layout_marginBottom="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Eventos"
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0.02" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Formulario de Registro"
                android:textColor="#E3F2FD"
                android:textSize="14sp"
                android:layout_marginTop="4dp" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- CONTENIDO PRINCIPAL -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="20dp"
        android:clipToPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="80dp">

            <!-- TARJETA DE INFORMACIÓN DEL EVENTO -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp"
                app:strokeColor="#E3F2FD"
                app:strokeWidth="1dp"
                android:backgroundTint="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="INFORMACIÓN DEL EVENTO"
                        android:textColor="#2196F3"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:letterSpacing="0.05"
                        android:layout_marginBottom="16dp" />

                    <!-- Título del Evento -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_title"
                            android:tint="#2196F3"
                            android:layout_marginEnd="12dp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="TÍTULO DEL EVENTO"
                                android:textColor="#78909C"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:letterSpacing="0.05" />

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:boxBackgroundMode="outline"
                                app:boxBackgroundColor="@android:color/transparent"
                                app:boxCornerRadiusBottomEnd="12dp"
                                app:boxCornerRadiusBottomStart="12dp"
                                app:boxCornerRadiusTopEnd="12dp"
                                app:boxCornerRadiusTopStart="12dp"
                                app:boxStrokeColor="#E3F2FD"
                                android:layout_marginTop="4dp">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/etTituloEvento"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="Ingrese el título del evento"
                                    android:textSize="16sp"
                                    android:textColor="#263238" />
                            </com.google.android.material.textfield.TextInputLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Fecha del Evento -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_date"
                            android:tint="#2196F3"
                            android:layout_marginEnd="12dp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="FECHA DEL EVENTO"
                                android:textColor="#78909C"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:letterSpacing="0.05" />

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:boxBackgroundMode="outline"
                                app:boxBackgroundColor="@android:color/transparent"
                                app:boxCornerRadiusBottomEnd="12dp"
                                app:boxCornerRadiusBottomStart="12dp"
                                app:boxCornerRadiusTopEnd="12dp"
                                app:boxCornerRadiusTopStart="12dp"
                                app:boxStrokeColor="#E3F2FD"
                                android:layout_marginTop="4dp">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/etFecha"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="Seleccione fecha"
                                    android:textSize="16sp"
                                    android:textColor="#263238"
                                    android:focusable="false"
                                    android:clickable="true" />
                            </com.google.android.material.textfield.TextInputLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Descripción -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="8dp">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_description"
                                android:tint="#2196F3"
                                android:layout_marginEnd="12dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="DESCRIPCIÓN"
                                android:textColor="#78909C"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:letterSpacing="0.05" />
                        </LinearLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:boxBackgroundMode="outline"
                            app:boxBackgroundColor="@android:color/transparent"
                            app:boxCornerRadiusBottomEnd="12dp"
                            app:boxCornerRadiusBottomStart="12dp"
                            app:boxCornerRadiusTopEnd="12dp"
                            app:boxCornerRadiusTopStart="12dp"
                            app:boxStrokeColor="#E3F2FD"
                            android:layout_marginTop="4dp">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etDescripcion"
                                android:layout_width="match_parent"
                                android:layout_height="120dp"
                                android:hint="Ingrese descripción del evento"
                                android:gravity="top|start"
                                android:textSize="16sp"
                                android:textColor="#263238"
                                android:inputType="textMultiLine" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- TARJETA DE EVIDENCIA -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp"
                app:strokeColor="#E3F2FD"
                app:strokeWidth="1dp"
                android:backgroundTint="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_image"
                            android:tint="#2196F3"
                            android:layout_marginEnd="12dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ADJUNTAR IMAGEN"
                            android:textColor="#78909C"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:letterSpacing="0.05" />
                    </LinearLayout>

                    <!-- Área de carga de imagen -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="4dp"
                        app:strokeColor="#BBDEFB"
                        app:strokeWidth="1dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:background="#F5F5F5">

                            <ImageView
                                android:id="@+id/ivPreview"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:visibility="gone" />

                            <LinearLayout
                                android:id="@+id/llPlaceholder"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:visibility="visible">

                                <ImageView
                                    android:id="@+id/ivAdjuntar"
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:src="@drawable/ic_add_photo"
                                    android:tint="#2196F3"
                                    android:contentDescription="Seleccionar imagen" />

                                <TextView
                                    android:id="@+id/tvImagenSeleccionada"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Toca para seleccionar imagen"
                                    android:textColor="#78909C"
                                    android:textSize="14sp"
                                    android:layout_marginTop="8dp" />
                            </LinearLayout>

                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>

    <!-- BARRA INFERIOR DE ACCIONES -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="72dp"
        app:cardCornerRadius="0dp"
        app:cardElevation="12dp"
        app:strokeColor="#E0E0E0"
        app:strokeWidth="0.5dp"
        android:backgroundTint="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingHorizontal="24dp"
            android:gravity="center_vertical">

            <com.google.android.material.button.MaterialButton
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Cancelar"
                android:textColor="#2196F3"
                android:textSize="14sp"
                app:icon="@drawable/ic_arrow_back"
                app:iconGravity="textStart"
                app:iconPadding="8dp"
                app:cornerRadius="24dp"
                app:strokeColor="#2196F3"
                app:strokeWidth="1dp"
                android:backgroundTint="@android:color/transparent"
                style="@style/Widget.Material3.Button.OutlinedButton" />

            <Space
                android:layout_width="12dp"
                android:layout_height="1dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEnviarEvidencia"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Enviar Evento"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                app:icon="@drawable/ic_send"
                app:iconGravity="textStart"
                app:iconPadding="8dp"
                app:cornerRadius="24dp"
                android:backgroundTint="#2196F3"
                style="@style/Widget.Material3.Button" />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</LinearLayout>