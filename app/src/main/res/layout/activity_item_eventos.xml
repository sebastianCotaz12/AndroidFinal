<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    android:orientation="horizontal"
    android:padding="12dp"
    android:background="@android:drawable/dialog_holo_light_frame"
    android:elevation="4dp"
    android:clipToOutline="true"
    android:outlineProvider="background"
    android:foreground="?android:attr/selectableItemBackground">

    <!-- Miniatura de la actividad -->
    <ImageView
        android:id="@+id/imgMiniatura"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="12dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher"
        android:contentDescription="Miniatura actividad" />

    <!-- Contenedor de texto y botones -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Nombre y fecha -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtTituloEvento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre Evento"
                android:textColor="#212121"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtFechaEvento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="01 Sept 2025"
                android:textColor="#616161"
                android:textSize="13sp"
                android:layout_marginTop="2dp"/>
        </LinearLayout>

        <!-- Botones -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/btnDetalles"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginEnd="8dp"
                android:backgroundTint="#2196F3"
                android:text="Detalles"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="14sp" />

            <ImageButton
                android:id="@+id/btnDownload"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@android:color/transparent"
                android:src="@android:drawable/stat_sys_download_done"
                android:tint="#F44336"
                android:contentDescription="Descargar" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>