<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    android:orientation="horizontal"
    android:padding="12dp"
    android:background="@android:drawable/dialog_holo_light_frame"
    android:elevation="4dp"
    android:clipToOutline="true"
    android:outlineProvider="background"
    android:foreground="?android:attr/selectableItemBackground">

    <!-- Imagen o miniatura del evento -->
    <ImageView
        android:id="@+id/imgMiniatura"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="12dp"
        android:scaleType="centerCrop"
        android:src="@drawable/placeholder_image"
        android:contentDescription="Imagen del evento" />

    <!-- Contenedor de textos y botones -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Nombre del evento -->
        <TextView
            android:id="@+id/txtTituloEvento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TÃ­tulo del evento"
            android:textColor="#212121"
            android:textSize="16sp"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end" />

        <!-- Nombre del usuario -->
        <TextView
            android:id="@+id/txtNombreUsuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Por: Usuario"
            android:textColor="#424242"
            android:textSize="14sp"
            android:layout_marginTop="2dp" />

        <!-- Fecha del evento -->
        <TextView
            android:id="@+id/txtFechaEvento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15 Oct 2025"
            android:textColor="#616161"
            android:textSize="13sp"
            android:layout_marginTop="2dp" />

        <!-- Botones -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/btnDetalles"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginEnd="8dp"
                android:backgroundTint="#2196F3"
                android:text="Detalles"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="14sp" />

            <ImageButton
                android:id="@+id/btnDownload"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@android:color/transparent"
                android:src="@android:drawable/stat_sys_download_done"
                android:tint="#F44336"
                android:contentDescription="Descargar archivo" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
