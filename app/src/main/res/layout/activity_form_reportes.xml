<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#E3F2FD"
    tools:context=".controller.Form_reportes">

    <!-- Barra superior -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="12dp"
        android:background="#1565C0"
        android:elevation="6dp">

        <ImageView
            android:id="@+id/ivLogo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_form"
            android:tint="@android:color/white"
            android:contentDescription="Icono Lista" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Reportes"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@android:color/white" />

        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:src="@drawable/logo"
            android:contentDescription="Logo" />
    </LinearLayout>

    <!-- Título -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Crear Reporte"
        android:textSize="22sp"
        android:textColor="#0D47A1"
        android:gravity="center"
        android:layout_marginVertical="16dp"
        android:textStyle="bold" />

    <!-- Formulario -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingHorizontal="16dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Cargo -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="14dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/bg_card_blue">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cargo"
                    android:textColor="#0D47A1"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:layout_marginBottom="6dp" />

                <EditText
                    android:id="@+id/etCargo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Ingrese cargo"
                    android:background="@drawable/bg_edittext_blue"
                    android:padding="10dp"
                    android:inputType="text" />
            </LinearLayout>

            <!-- Cédula -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="14dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/bg_card_blue">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ID Usuario"
                    android:textColor="#0D47A1"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:layout_marginBottom="6dp" />

                <EditText
                    android:id="@+id/etCedula"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Ingrese su cédula"
                    android:background="@drawable/bg_edittext_blue"
                    android:padding="10dp"
                    android:inputType="number" />
            </LinearLayout>

            <!-- Fecha -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="14dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/bg_card_blue">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Fecha"
                    android:textColor="#0D47A1"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:layout_marginBottom="6dp" />

                <EditText
                    android:id="@+id/etFecha"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Seleccione fecha"
                    android:background="@drawable/bg_edittext_blue"
                    android:padding="10dp"
                    android:focusable="false"
                    android:inputType="date" />
            </LinearLayout>

            <!-- Lugar -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="14dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/bg_card_blue">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lugar"
                    android:textColor="#0D47A1"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:layout_marginBottom="6dp" />

                <EditText
                    android:id="@+id/etLugar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Ingrese lugar"
                    android:background="@drawable/bg_edittext_blue"
                    android:padding="10dp"
                    android:inputType="text" />
            </LinearLayout>

            <!-- Descripción -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="14dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/bg_card_blue">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Descripción"
                    android:textColor="#0D47A1"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:layout_marginBottom="6dp" />

                <EditText
                    android:id="@+id/etDescripcion"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:hint="Ingrese descripción"
                    android:gravity="top|start"
                    android:background="@drawable/bg_edittext_blue"
                    android:padding="10dp"
                    android:inputType="textMultiLine" />
            </LinearLayout>

            <!-- Imagen -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="14dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/bg_card_blue">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Imagen"
                    android:textColor="#0D47A1"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:layout_marginBottom="6dp" />

                <Button
                    android:id="@+id/btnSeleccionarImagen"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:text="Seleccionar Imagen"
                    android:backgroundTint="#1565C0"
                    android:textColor="@android:color/white"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvImagenSeleccionada"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ninguna imagen seleccionada"
                    android:textColor="#607D8B"
                    android:paddingTop="4dp" />
            </LinearLayout>

            <!-- Archivos -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="14dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/bg_card_blue">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Archivos"
                    android:textColor="#0D47A1"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:layout_marginBottom="6dp" />

                <Button
                    android:id="@+id/btnSeleccionarArchivo"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:text="Seleccionar Archivo"
                    android:backgroundTint="#1565C0"
                    android:textColor="@android:color/white"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvArchivoSeleccionado"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ningún archivo seleccionado"
                    android:textColor="#607D8B"
                    android:paddingTop="4dp" />
            </LinearLayout>

            <!-- Estado -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="14dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/bg_card_blue">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Estado"
                    android:textColor="#0D47A1"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:layout_marginBottom="6dp" />

                <Spinner
                    android:id="@+id/spEstado"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:spinnerMode="dropdown"
                    android:padding="8dp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Botón Enviar -->
    <Button
        android:id="@+id/btnEnviarReporte"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enviar Reporte"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:backgroundTint="#0D47A1"
        android:textColor="@android:color/white"
        android:elevation="8dp"
        android:layout_margin="16dp"
        android:paddingVertical="14dp" />

</LinearLayout>
